<h1>Create a Landmark</h1>
<form action="/landmarks" method="post">
  <label for="landmark[name]">Name:</label>
  <input type="text" name="landmark[name]" id="landmark_name"></input>
  <label for="landmark[year_completed]">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></input>
  <h3>Figure</h3>
  <% @figures.each do |figure| %>
    <input type="radio" name="figure_id" id="<%= figure.id %>" value="<%= figure.id %>"><%= figure.name %></input>
  <% end %>
  <p>or create a new figure <input type="text" name="figure_name"></input></p>
  <input type="submit" id="Create New Landmark" value="Submit Landmark"></input>
</form>
