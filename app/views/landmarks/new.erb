<h2>Add a Historical Figure</h2>
<p>views/figures/new.erb</p>
<a class="button" href="/">Home</a>
<hr>
<br>
<form method="POST" action="/figures">
  <label for "figure_name">Name:</label>
  <input type="text" name="figure_name" id="figure_name">
  <br>
  <h3>Titles</h3>
  <% Title.all.each do |title| %>
    <input
    id="<%= title.name %>"
    type="checkbox"
    name="title[]"
    value="<%= title.id %>"
    ><%= title.name %>
    <br>
  <% end %>
  <br>
  <h3>Create a New Title</h3>
  <input type="text" name="title" id="title">
  <br>
  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <input
    id="<%= landmark.name %>"
    type="checkbox"
    name="landmark[]"
    value="<%= landmark.id %>"
    ><%= landmark.name %>
    <br>
<% end %>

  <h3>Create a New Landmark:</h3>
  <input type="text" name="landmark" id="landmark">
  <input type="text" name="year" id="year">
  <input type="submit" value="Create new Landmark">
</form>
