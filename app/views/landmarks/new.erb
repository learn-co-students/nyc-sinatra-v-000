<h1>Create a New Landmark</h1>

<form action="/landmarks" method="post">
  <label>Name</label>
  <input type="text" name="landmark[name]" id="landmark_name">

  <label>Titles</label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="titles[]" id="<%= title.name %>" value="<%= title.id %>"><%= title.name %></input>
  <% end %>
  
  <input type="submit" value="Create New Figure">

</form>
