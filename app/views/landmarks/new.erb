
<form action="/landmarks" method="POST">
  <label for="name">Name</label>

  <input type="text" name="landmark[name]" id="landmark_name">

   <h3>Landmarks</h3>

   <% Landmark.all.each do |landmark| %>
     <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
     <%= landmark.name %> <br>
   <% end %>

   <h3>Create A New Landmark:</h3>
    <label for="landmark">Name:</label>

    <input type="text" name="landmark[name]" id="new_landmark">

     <label for="year">Year:</label>

     <input type="text" name="landmark[year_completed]" id="landmark_year_completed">

  <input type="submit" value="Create New Landmark">
</form>
