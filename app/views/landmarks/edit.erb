<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">

<label>Name:
<input type="text" name="landmark[name]" id="name" value= <%= @landmark.name %>>
</label>

<label>Year:
<input type="text" name="landmark[year_completed]" id="year_completed" value= <%= @landmark.year_completed.to_s %>>
</label>

<button type="submit">Edit Landmark</button>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
