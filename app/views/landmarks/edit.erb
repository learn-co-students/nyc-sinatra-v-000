<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%= @landmark.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">

    Name: <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>">

    Year: <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">
    
    <input type="submit" value="Edit Landmark">

</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
