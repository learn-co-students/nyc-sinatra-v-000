<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input id="name" type="text" name="landmark[name]" value="<%= @landmark.name %>">
  <label>Year: </label>
  <input id="year_completed" type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">
  <h3>Figure: </h3>
  <input type="text" name="figure[name]" value="<% @landmark.figure.name %>">
  <br>
  <input type="submit" name="submit" value="Edit Landmark">
</form>
