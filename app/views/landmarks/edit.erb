<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

   <lable>Landmark Name</lable>
  <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>">

   <lable>Year completed</lable>
  <input type="integer" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>">

   <lable>Figure</lable>
  <%Figure.all.each do |figure|%>
    <input type="radio" name="figure_id" value="<%=figure.id%>"
    <%='checked' if @landmark.figure_id == figure.id %>><%=figure.name%>
  <%end%>

   <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
