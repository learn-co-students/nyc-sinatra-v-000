<h2>Edit Historical Landmark</h2>
<!-- add content here -->
<form class="" action="/landmarks/<%=@landmark.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Change Landmark Attributes:</h2>
  <label>Change Name</label>
  <%= @landmark.name %>
  <input type="input" name="landmark[name]" id="name">
  <label>Change Year Completed</label>
  <%= @landmark.year_completed.to_s %>
  <input type="input" name="landmark[year_completed]" id="year_completed">
  <input type="submit" name="Edit Landmark" value="Edit Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
