<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">  

  Name: <input type="text" name="landmark[name]" id="name" value=<%=@landmark.name%>></br>
  Year: <input type="text" name="landmark[year_completed]" id="year_completed" value=<%=@landmark.year_completed%>></br></br>

  <h4>Figures</h4>
  <% Figure.all.each do |figure| %>
    <input type="radio" name="figure_id" id="figure_<%=figure.id%>" value="<%=figure.id%>" <%'checked' if @landmark.figure == figure%>><%=figure.name%></br>
  <% end %></br>

  Create New Figure: <input type="text" name="figure[name]" id="new_figure"> </br></br>

  <input type="submit" id="Edit Landmark" value = "Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
