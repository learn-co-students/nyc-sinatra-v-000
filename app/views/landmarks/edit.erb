<h2>Edit Historical Landmark</h2>
<h3><%= @landmark.id %></h3>
<!-- add content here -->
<form method="POST" action="/landmarks/<%= @landmark.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label for="">Name: </label>
<input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"><br><br>
<label for="">Year: </label>
<input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"><br><br>
<input type="submit" value="Edit Landmark"><br><br>
</form>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
