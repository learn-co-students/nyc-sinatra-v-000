<h3> Edit <%=@landmark.id%> </h3>
<form method="POST" action="/landmarks/<%=@landmark.id%>">
    <input id ="hidden" type="hidden" name="_method" value="patch">
        <label><strong> Name: </strong></label>
            <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>"> <br>
        <label><strong> Year Completed: </strong></label>
            <input type="text" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>">
        <input type="submit" value ="Edit Landmark">
</form>
