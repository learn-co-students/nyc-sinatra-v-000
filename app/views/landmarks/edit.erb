<h2>Edit Historical Landmark</h2>

<form action="/landmarks/#{landmark.id}" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Current Name:<%=@landmark.name.to_s%></p>
  <label>Name:</label><input type="text" name="landmark[name]" id="name">
  <p>Current Year Completed:<%=@landmark.year_completed.to_s%></p>
  <label>Year Completed:</label><input type="text" name="landmark[year_completed]" id="year_completed">
  <input type="submit" value="Edit Landmark">
</form>

