<h2>Edit Historical Landmark</h2>
<h3><%= @landmark.name %></h3>
<h3><%= @landmark.year_completed.to_s%></h3> 


<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Name:</label>
  <input id="name" type="text" name="landmark[name]">
  <label>Year:</label>
  <input id="year_completed" type="text" name="landmark[year_completed]">

  <input id="submit" type="submit" value="Edit Landmark">
  </form>


<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
