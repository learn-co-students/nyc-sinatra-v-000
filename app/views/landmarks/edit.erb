<form method="POST" action="/landmarks/<%=@landmark.id%>">
  <input type="hidden" name="_method" value="patch">

  <p><label> Name: </label> <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>"></p>

   <p><label> Year Completed: </label><br>
     <input type="text" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>"></p>

  <input type="submit" value="Edit Landmark">
 </form>


