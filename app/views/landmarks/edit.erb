<h2>Edit Historical Landmark</h2>

<form class="" action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <p><label for="">Name: </label><input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"></p>

  <p><label for="">Year Completed: </label><input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"></p>

  <p><input type="submit" name="" value="Edit Landmark"></p>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
