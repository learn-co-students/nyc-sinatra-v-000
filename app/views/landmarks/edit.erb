<h2>Edit Historical Landmark</h2>
<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Landmark: <%=@landmark.name%></h2>
  <h2>year_completed: <%=@landmark.year_completed.to_s%>
  <h2>Edit Landmark</h2>

  <br></br>

  <% @landmarks.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="landmark[name]" value="<%= landmark.id %>" <%='checked' if @landmark.name.include?(landmark.name) %>><%=landmark.name%></input><br>
  <% end %>

  <br></br>

  <label> Edit Landmark: </label>

  <br></br>
  <label> Name </label>
  <input type="text" name="landmark[name]" id="name">
  <label> Year </label>

  <input type="text" name="landmark[year_completed]" id="year_completed">
  <input type="submit" value="Edit Landmark">


  <a class="button" href="/figures">Landmarks</a>
  <a class="button" href="/">Home</a>
</form>



