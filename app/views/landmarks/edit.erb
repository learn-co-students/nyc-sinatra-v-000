<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label>Landmark Name: </label>
      <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name"><br><br>
    <label>Year Completed: </label>
      <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed"><br><br>
      
  <input type="submit" value="Edit Landmark">
</form> 


<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
