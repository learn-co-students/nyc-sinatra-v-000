<h2>Edit <%= @landmark.name %></h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <h3><label for="name">Landmark Name:</label></h3>
  <input type="text" name="landmark[name]" id="name">
  <h3><label for="year_completed">Landmark Year Completed:</label></h3>
  <input type="text" name="landmark[year_completed]" id="year_completed"><%= @landmark.year_completed.to_s %>

  <input type="submit" value="Edit Landmark" id="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>

