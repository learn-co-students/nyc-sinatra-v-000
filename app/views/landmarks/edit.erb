<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="post">
    <input type="hidden" name="_method" id="hidden" value="patch">
    <label for="landmark[name]">Landmark Name</label>
    <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>">
<br>
    <label for="landmark[year_completed]">Landmark - Year Completed</label>
    <input type="text" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed.to_s%>">

    <input type="submit" value="Edit Landmark">


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
