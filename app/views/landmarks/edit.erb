<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%= @landmark.id %>">
  <input type="hidden" name="_method" value="PATCH">
  <label for="landmark[name]">Landmark Name</label><input id="name" type="text" name="landmark[name]" value="<%= @landmark.name %>"><br><br>
  <label for="landmark[year_completed]">Landmark Year Completed</label><input id="year_completed" type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"><br><br>
  <input style="font-size: 1.5rem;" type="submit" value="Update Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
