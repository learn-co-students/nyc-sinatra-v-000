<h2>Edit Historical Landmark</h2>
<h3><%= @landmark.name %></h3>
<h4><%= @landmark.year_completed %></h4>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch"></input>
  <label for="landmark_name">Name: </label>
  <input type="text" name="landmark[name]" id="name"></input><br>
  <label for="landmark_year_completed">Year Completed: </label>
  <input type="text" name="landmark[year_completed]" id="year_completed"></input><br><br>
  <input type="submit" value="Edit Landmark"></input>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
