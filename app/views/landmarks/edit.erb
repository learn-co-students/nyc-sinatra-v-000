<h2>Edit Historical Landmark</h2>
<br>
<h2><%=@landmark.name%></h2>
<form method="POST" action="/landmarks/<%=@landmark.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name: </label><input type="textbox" name="landmark[name]" id="name" value="<%=@landmark.name%>"/>
<label>Year Completed: </label><input type="textbox" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>"/>

<input type="submit" value="Edit Landmark"/>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
