<h2>Edit Historical Landmark</h2>

<!-- add content here -->

<form method = "post" action = "/landmarks/<%= @landmark.id %>">
  <input id = "hidden" type = "hidden" name = "_method" value = "patch">
  <input type = "text" name = "landmark[name]" id = "name" value = "<%= @landmark.name %>"><br>
  <input type = "number" name = "landmark[year_completed]" id = "year_completed" value = "<%= @landmark.year_completed %>"> <br>
  <input type = "submit" value = "Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
