<h2>Edit Historical Landmark</h2>

<form action="/figures/<%=@landmark.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  
  <label for="landmark_name">Name:</label>
  <input type="text" id="landmark_name" name="landmark[name]" value="<%=@landmark.name%>">
  <label for="landmark_year_completed">Year Completed:</label>
  <input type="text" id="landmark_year_completed" name="landmark[year_completed]" value = "<%=@landmark.year_completed%>">
  
  <h3>Figures:</h3>
     <% Figure.all.each do |figure|%>
     <input type="checkbox" name="landmark[figure_ids][]" id="figure_<%= figure.id %>" value="<%=figure.id%>" <%='checked' if @landmark.figure.name == figure.name %>><%=figure.name%></input><br>
  <%end%>
  
  <h3>or Create New Figure:</h3>
     <label for="figure_name">Name:</label>
     <input type="text" name="figure[name]" id="figure_name">
     
  <br>
  <input type="submit" value="Edit Landmark">
  
  
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
