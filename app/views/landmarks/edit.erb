<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
    <!--landmark name input-->
    <label>Name</label><input id="name" type="text" name="landmark[name]" value="<%= @landmark.name %>">
    <!--landmark year input-->
    <label>Year</label><input id="year_completed" type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">

    <!--submit button-->
    <input type="submit" value="Edit Landmark">

</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
