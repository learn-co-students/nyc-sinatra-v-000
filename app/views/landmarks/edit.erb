<h2>Edit Historical Landmark</h2>

<!-- add content here -->

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Landmark Name:</label><br><br>

  <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"><br><br>

  <label>Year Completed:</label><br><br>

  <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed.to_s %>"><br><br>

  <input type="submit" name="submit" value="Edit Landmark"><br><br>

</form>

