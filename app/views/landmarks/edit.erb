<h2>Edit Historical Landmark <%=@landmark.name%></h2>

<!-- add content here -->

<form method="post" action="/landmarks/<%= @landmark.id %>">
    <input id="hidden" type="hidden" name="_method" action="POST">
  <b><label for="name">Landmark: </label></b>
  <br><br>
  Name: <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">
  Year Completed: <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>">
  <br><br><br>
  <b><label for="figure_name">Figure: </label></b>
  <br><br>
  <%Figure.all.each do |figure|%>
  <input type="checkbox" name="landmark[figure_id][]" id="figure_<%=figure.id%>" value="<%=figure.id%>"
  <%= 'checked' if @landmark.figure_id == figure.id %> ><%=figure.name%></input>
  <%end%>
  <br><br>
  Or create a new figure:<br>
  Figure Name: <input type="text" name="figure[name]" id="figure_name">
  <br><br><br>
  <b><label for="new_title">Titles: </label></b>
  <br><br>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
  <%end%>
  <br><br>
  Or create a new title: <input type="text" name="title[name]" id="new_title">
  <br><br><br>
  <input type="submit" value="Edit Landmark">
</form>
<br><br><br>

