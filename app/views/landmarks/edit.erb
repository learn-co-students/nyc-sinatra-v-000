<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input type="hidden" name="_method" method="PATCH">
  <label for="landmark_name">Name: <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>"></label>
  <br></br>
  <label for="landmark_year_completed">Year Completed: <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"></label>
  <br></br>
  <input type="submit" value="Edit Landmark">
</form>

