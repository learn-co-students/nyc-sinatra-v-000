<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">

  <div class="landmark">
    <label for="landmark[name]">Name: </label><input type="text" name="landmark[name]" value="<%=@landmark.name%>" id="name"></input>
    <label for="landmark[year_completed]">Year: </label><input type="text" name="landmark[year_completed]" value="<%=@landmark.year_completed%>" id="year_completed"></input>
  </div>

  <div class="figures">
    <h2>Figures</h2>
    <%@figures.each do |figure|%>
      <input type="radio" name="figure[id]" value="<%=figure.id%> "id="figure_<%=figure.id%>" <%='checked' if @landmark.figure.id == figure.id %>><%=figure.name%></input>
      <br>
    <%end%>
  </div>

  <input type="submit" value="Edit Landmark" id="submit"></input>

</form>
<br>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
