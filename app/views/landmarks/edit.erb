<h1>Edit a Landmark</h1>
<form action="/landmarks/<%= @landmark.id %>/edit" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="landmark[name]">Name:</label>
  <input type="text" name="name" id="landmark[name]" value="<%= @landmark.name %>"></input>
  <label for="year_completed">Year Completed:</label>
  <input type="text" name="year_completed" id="landmark[year_completed]" value="<%= @landmark.year_completed %>"></input>
  <h3>Figure</h3>
  <% @figures.each do |figure| %>
    <input type="radio" name="figure_id" id="<%= figure.id %>" value="<%= figure.id %>" <%='checked' if @landmark.figure_id == figure.id %>><%= figure.name %></input>
  <% end %>
  <p>or create a new figure <input type="text" name="figure_name"></input></p>
  <input type="submit" id="Edit Landmark" value="Save Landmark"></input>
</form>
