<h1>Editing Landmark: <%= @landmark.name %></h1>
<form class="" action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="">Name:</label>
  <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">

  <label for="">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed">

  <h3>Figures</h3>
  <% Figure.all.each do |figure|%>
    <input type="checkbox" name="landmark[figure_id]" value="<%= figure.id %>" id="figure_<%= figure.id %>"
    <%= 'checked' if @landmark.figure == figure %>><%= figure.name %></input>
  <% end %>
  <p>Create a new figure:</p>
  <label for="">Name: </label>
  <input type="text" name="figure[name]" id="new_figure">

  <br><br>
  <input type="submit" name="submit" value="Save Edit" id="Edit Landmark">
</form>
