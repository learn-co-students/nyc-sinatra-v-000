<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="landmark[name]">Name</label><br>
  <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>">
  <label for="landmark[figure]">Figure Name</label>
  <input type="text" name="landmark[figure]" id="figure_name" value="<%=@landmark.figure.name%>">
  <label for="landmark[year_completed]">Year Completed</label>
  <input type="number" name="landmark[year_completed]" id="year_completed" value=<%=@landmark.year_completed%>>
  <input type="submit" value="Update" id="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
