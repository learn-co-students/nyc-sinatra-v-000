<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="name">Name:</label>
  <input id="name" type="text" name="landmark[name]" value="<%=@landmark.name%>">
  
  <label for="year_completed">Year:</label>
  <input id="year_completed" type="text" name="landmark[year_completed]" value="<%=@landmark.year_completed.to_s%>">
  
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>

