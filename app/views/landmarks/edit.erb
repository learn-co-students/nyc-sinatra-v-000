<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form method="POST" action="/landmarks/<%= @landmark.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <p>
    <label for="landmark_name">Landmark name: </label>
    <input type="text" id="landmark_name" name="landmark[name]" value="<%= @landmark.name %>">
  </p>
  <p>
    <label for="landmark_year_completed">Landmark year completed: </label>
    <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed.to_s %>">
  </p>
  <input type="submit" name="Edit Landmark">
</form>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
