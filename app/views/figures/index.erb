<% @figures.each do |figure| %>
  <h2><%= figure.name %></h2>
  <% if !figure.landmarks.empty? %>
    <h3>Landmarks: </h3>
    <ul>
      <% figure.landmarks.each do |landmark| %>
        <li><%= landmark.name %></li>
      <% end %>
    </ul>
  <% end %>
  <% if !figure.titles.empty? %>
    <h3>Titles: </h3>
    <ul>
      <% figure.titles.each do |title| %>
        <li><%= title.name %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
