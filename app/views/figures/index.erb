  <label><h4>Figure Name</h4></label>

  <% @figures.each do |figure| %>
    <a href="/figures/<%= figure.id %>"><%= figure.name %></a>
    <ul>
      <%figure.titles.each do |title| %>
      <li><%= title.name %></li>
      <% end %>
    </ul>
  <% end %>

