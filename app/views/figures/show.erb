<h1><%= @figure.name %></h1>
<h3>Titles:</h3>
<ul>
  <% @figure.titles.each do |title|%>
    <li><a href="/titles/<%= title.id %>"><%= title.name %></a></li>
  <% end %>
</ul>
<h3>Landmarks:</h3>
<ul>
  <% @figure.landmarks.each do |landmark|%>
    <li><a href="/titles/<%= landmark.id %>"><%= landmark.name %></a></li>
  <% end %>
</ul>
