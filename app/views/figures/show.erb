<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @figure.name %></title>
  </head>
  <body>
    <h1><%= @figure.name %></h1>

    <h4>Landmarks:</h4>
    <% @figure.landmarks.each do |landmark| %>
      <p><a href="/landmarks/<%= landmark.id %>"><%= landmark.name %></a></p>
    <% end %>
    <% if @figure.landmarks.empty? %>
      <p>None</p>
    <% end %>

    <h4>Titles:</h4>
    <% @figure.titles.each do |title| %>
      <p><%= title.name %></p>
    <% end %>
    <% if @figure.titles.empty? %>
      <p>None</p>
    <% end %>

  </body>
</html>
