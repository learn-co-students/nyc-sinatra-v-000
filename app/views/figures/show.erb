<h2>Figure: <%=@figure.name%></h2>

<h3>Titles: </h3>
  <h4><%@figure.titles.each do |title|%>
    <ul>
      <li>
        <%=title.name%>
      </li>
    </ul>
     <%end%>

<h3>Landmarks: </h3>
  <h4><%@figure.landmarks.each do |landmark|%>
    <ul>
      <li>
        <%=landmark.name%>
      </li>
    </ul>
     <%end%>

<form action="/figures/<%=@figure.id%>/edit" method="GET">
   <input type="submit" value="Edit">
 </form>
