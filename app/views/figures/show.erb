<h2><a href="/figures/<%= @figure.id %>"><%= @figure.name %></a></h2>

<table>
  <tr>
    <th>Landmarks:</th>
    <th>Titles:</th>
  </tr>
  <tr>
    <td><ul><%@figure.landmarks.each do |landmark|%>
        <li><%= landmark.name %></li>
        <%end%>
      </ul></td>
      <td><ul>
        <%@figure.titles.each do |title|%>
        <li><%=title.name%></li>
        <%end%>
      </ul></td>
  </tr>
</table>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit Figure</a>
<a class="button" href="/landmarks">Landmarks</a>
