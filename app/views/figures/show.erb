<h3><%=@figure.name%></h3>

<h4>Title(s):</h4>
  <ul>
    <% @figure.titles.each do |title| %>
      <li>
        <%= title.name %>
      </li>
    <%end%>
  </ul>

<h4>Landmark(s):</h4>
  <ul>
    <% @figure.landmarks.each do |land| %>
      <li>
        <%= land.name %>
      </li>
    <%end%>
  </ul>
