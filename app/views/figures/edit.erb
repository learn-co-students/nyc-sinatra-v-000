

<h1>Edit: <%=@figure.name%></h1>

<form method="POST" action="/songs/<%= @figure.id %>">
  <input type="hidden" name="_method" value="PATCH" id="hidden">
  
  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name">
  
  <br>
  <label>Title:</label>
  <% Title.all.each do |title| %>
    <p><input type="checkbox" name="figure[titles][]" id="<%= title.name %>"  value="<%= title.ids %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></p>
  <% end %>
  <br>
  
  <label>Landmark:</label>
  <% Landmark.all.each do |landmark| %>
    <p><input type="checkbox" name="figure[landmarks][]" id="<%=landmark.name%>"  value="<%=landmark.ids%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></p>
  <% end %>
  
  <br>
    <input type="submit" value="Update Figure">
    
</form>


