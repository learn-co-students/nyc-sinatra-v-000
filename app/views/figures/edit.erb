<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH" />
  <p>
    <label for="figure_name">Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>" required />
  </p>
  
  <h4>Titles</h4>

  <% Title.all.each do |title| %>
    <label for="<%=title.name%>"><%= title.name %></label>
    <input type="checkbox" id="<%=title.name%>" name="figure[title_ids][]" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %> /><br>
  <% end %>
    
  <h4>Create New Title:</h4>

  <input type="text" id="new_title" name="title[name]" />

  <h4>Landmarks</h4>

  <% Landmark.all.each do |ldmk| %>
    <label for="<%=ldmk.name%>"><%= ldmk.name %></label>
    <input type="checkbox" id="<%=ldmk.name%>" name="figure[landmark_ids][]" value="<%= ldmk.id %>" <%= "checked" if @figure.landmarks.include?(ldmk) %> /><br>
  <% end %>
    
  <h4>Create New Landmark:</h4>
  <label for="new_landmark">Name: </label>
  <input type="text" id="new_landmark" name="landmark[name]" />
  
  <label for="year_completed"> Year: </label>
  <input type="text" id="year_completed" name="landmark[year_completed]" />
  
  <br><br>
  <input type="submit" value="Edit Figure" /> 
</form>