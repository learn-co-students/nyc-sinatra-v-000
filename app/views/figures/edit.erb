<form method="post" action="/figures/<%=@figure.id%>">
    <input type="hidden" name="_method" value="patch"></input>

    <label>Figure Name: </label>
        <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></input>

    <p>Title</p>
    <%Title.all.each do |title|%>
        <ul>
            <%=title.name%>
            <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>></input>
        </ul>
    <%end%>
    <label>Create New Title: </label>
        <input id="new_title" type="text" name="title[name]"></input>

    <p>Landmarks</p>
    <%Landmark.all.each do |landmark|%>
        <ul>
            <%=landmark.name%>
            <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>></input>
        </ul>
    <%end%>
    <label>Create New Landmark: </label>
        <input id="new_landmark" type="text" name="landmark[name]"></input>
         <input type="text" name="landmark[year_completed]"></input>
    <br></br>
    <input type="submit" value="Edit Figure">


</form>