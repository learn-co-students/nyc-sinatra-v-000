<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <!-- Edit Figure Name -->
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"> </br>    
  
  <!-- Edit Titles, print them with checkbox -->
  <label>Title(s)</label>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>"> </br>
  <% end %>
  
  <!-- Edit Landmarks, print them with checkbox -->
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>"> </br>
  <% end %>
  <!-- Create Landmark -->
  <label>Create a Landmark</label></br>
  <label>Landmark Name</label>
  <input type="text" name="landmark[name]" id="new_landmark"></br>
  <label>Year Landmark was completed</label>
  <input type="text" name="landmark[year_completed]"></br>

  <!-- Submit Edit Figure Form -->
  <input type="submit" value="Edit Figure">  
</form>