<h1>Edit Your Figure</h1>
<form method="POST" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name:</label><input type='text' name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>
  <label><h3>Title</h3></label>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"
   <%= 'checked' if @figure.titles.include?(title)%>><%=title.name%></input>
  <% end %>
  <br>
  <lable><h3>Create A New Title:</h3></label>
    <input type="text" name="title[name]" id="new_title"><br>
    <label><h3>Landmarks</h3></label>
      <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"
       <%= 'checked' if @figure.landmarks.include?(landmark)%> ><%=landmark.name%>
      <%end%>
    <br>
    <label><h3>Register a New Landmark</h3></label>
    <h4>Name:</h4>
    <input type="text" name="landmark[name]" id="new_landmark"><br>
    <label><h4>Year Completed</h4></label>
    <input type="integer" name="landmark[year_completed]" id="year_completed"><br>

    <input type="submit" value="Edit Figure">
</form>
