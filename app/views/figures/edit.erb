<h1>Edit Figure</h1>

<form method="POST" action="/figures/<%= @figure.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

  <br />

  <h3>Titles</h3>
  <% Title.all.each do |title| %>
    <input type="checkbox" id="<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"<%= "checked" if @figure.titles.include?(title) %>><%= title.name %>
    <br />
  <% end %>

  <h3>Create New Title</h3>
  <input type="text" name="title[name]" id="new_title" />

  <br />

  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"<%= "checked" if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <br />
  <% end %>

  <h3>Create New Landmark</h3>
  <input type="text" name="landmark[name]" id="new_landmark" />
  <br />
  <br />

  <input type="submit" value="Edit Figure" />
</form>
