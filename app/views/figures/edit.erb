<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <label>Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br><br>

    <label>Titles:</label><br>
    <% Title.all.each do |t| %>
    <label><%= t.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= t.id %>" id="<%= t.name %>" <%='checked' if @figure.titles.include?(t) %>><br>
    <% end %><br>
    <label>New Title</label>
  <input type="text" id="new_title" name="title[name]">

    <label>Landmarks:</label><br>
  
  <% Landmark.all.each do |l| %>
    <label><%= l.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>" id="<%= l.name %>" <%='checked' if @figure.landmarks.include?(l) %>><br>
  <% end %>

  <label>New Landmark</label>
  <input type="text" id="new_landmark" name="landmark[name]"><br>

  <input type="submit" value="Edit Figure">

</form>