<h1>Edit Page for <%=@figure.name%></h1>
<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"></br>

  <h2>Edit Titles</h2>
  <br></br>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title.name" value="<%= title.id %>" name="figure[title_ids][]"><%='checked' if @figure.titles.include?(title)%><br>
  <% end %>
  <h3>Create New title</h3>
  <input type="text" id="new_title" placeholder="New Title Name" name="title[name]"></br>

  <br></br>


  <h2>Edit Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark.name" value="<%= landmark.id %>" name="figure[landmark_ids][]"><%='checked' if @figure.landmarks.include?(landmark)%><br>
  <% end %>

  <h3>Create New Landmark</h3>
  <input type="text" id="new_landmark" placeholder="New Landmark Name" name="landmark[name]"></br>
  <br></br>
  <input type="submit" value="Edit Figure">
</form>
