
<h2>Edit Figure</h2>

<!-- add content here -->
  <form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
    <label for="Figure Name">Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></br>
    <%binding.pry%>
    <h2><label for="Figure Title">Titles:</label></h2>
      <%Title.all.each do |title| %>
        <%if !@titles.include?(title)%>
          <p><input type="checkbox" name="figure[title_ids][]"  id="title_<%=title.id%>" value=<%=title.id%>> <%= title.name%> </p>
        <%else%>
          <p><input type="checkbox" name="figure[title_ids][]"  id="title_<%=title.id%>" value=<%=title.id%> checked><%= title.name%> </p>
      <%end%>
    <%end%>
    <label for="Create Figure">Create New Title:</label>
    <input type="text" name="title[name]" id="new_title"></br>
    <h2><label for="Figure Landmark">Landmarks:</label></h2>
      <%Landmark.all.each do |landmark| %>
      <%if !@landmarks.include?(landmark)%>
        <p><input type="checkbox" name="figure[landmark_ids][]"  id="landmark_<%=landmark.id%>" value=<%=landmark.id%>> <%= landmark.name%> </p>
      <%else%>
        <p><input type="checkbox" name="figure[landmark_ids][]"  id="landmark_<%=landmark.id%>" value=<%=landmark.id%> checked> <%= landmark.name%> </p>
      <%end%>
    <%end%>
    <label for="Create Landmark">Create New Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark"></br>
    <input type="submit" value="Edit Figure"></br>
  </form>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
