<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <br>

  <label><h3>Titles</h3></label>

  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
    <br>
  <% end %>

  <label><h3>Create New Title:</h3></label>
  <input id="new_title" type="text" name="title[name]">

  <label><h3>Landmarks</h3></label>

  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <br>
  <% end %>

  <label><h3>Create New Landmark:</h3></label>

  <label>Name:</label>
  <input id="new_landmark" type="text" name="landmark[name]">

  <label for="year_completed">Year:</label>
  <input name="landmark[year_completed]">

  <input type="submit" value="Edit Figure">
</form>
