

<form action="/figures/<%=@figure.id%>" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <h4>Update Figure</h4>
      <label for="figure[name]">Figure Name</label>
      <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
      <br></br>


  <label for="">Title</label>
  <% Title.all.each do |title|%>
  <li> <input  type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"<%='checked' if @figure.titles.include?(title) %>> <%= title.name %> </input></li>
  <%end%>

  <h4><label for="new_title">Create New Title</label></h4>
  <input type="text" name="title[name]" id="new_title" >
  <br></br>

  <label>Landmarks</label>
  <% Landmark.all.each do |landmark|%>
  <li><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%=landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input></li>
  <%end%>

  <h4><label for="landmark">Create New Landmark</label></h4>

  <label for="landmark">Name</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <label for="year">Year</label>
  <input type="text" name="year" value="" id="year">
  <input type="submit" name="" value="Edit Figure">

</form>
