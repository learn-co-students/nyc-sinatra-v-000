<h1>Edit a figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <p>Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></p>

  <h3>Titles</h3>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title)%>><%=title.name%></input><br>
  <%end%>
  <br/>

  <h3>Create a new title</h3>
  <input  type="text" name="title[name]" id="new_title"></input>

  <h3>Landmarks</h3>
  <%@landmarks.each do |lm|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=lm.id%>" value="<%=lm.id%>"<%='checked' if @figure.landmarks.include?(lm)%>><%=lm.name%></input><br>
  <%end%>

  <br/>

  <h3>Create a New Landmark:</h3>
  Name: <input  type="text" name="landmark[name]" id="new_landmark"></input>
  Year: <input  type="text" name="landmark[year_completed]" id="new_year"></input><br><br>

  <input type="submit" value="Edit Figure" id="Edit Figure">
</form>
