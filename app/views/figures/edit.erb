<h1>Edit Single Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input name="_method" type="hidden" value="patch" />
  <label>Figure Name</label>
    <br></br>
      <input type="text"  name="figure_name" id="figure[name]" value="<%= @figure.name %>"></input>

    <br></br>
    <label>Titles:</label>
    <br></br>
  <% Title.all.each do |title| %>
     <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
       <label><%= title.name %></label>
     </input>
  <% end %>

  <label>Create New title</label>
    <br></br>
      <input type="text" name="new_title" id="title[name]"></input>
    <br></br>

    <label>Landmarks:</label>
    <br></br>

  <% Landmark.all.each do |landmark| %>
         <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>>
           <label><%= landmark.name %></label>
         </input>
  <% end %>

  <br></br>

  <label>Create New Landmark</label>
    <br></br>
      <input type="text" id="new_landmark" name="landmark[name]"></input>
      <input type="text" id="new_landmark_year_completed" name="landmark[year_completed]"></input>

    <br></br>

    <br></br>
      <input type="submit" value="Edit Figure">

</form>
