<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h1><%=@figure.name%></h1>
  <label> Name: </label>
  <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <label> Titles </label>
  <br></br>
  <% @titles.each do |title| %>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <% end %>

  <br></br>

  <label> Create New Title: </label>

  <br></br>

  <input type="text" name="title[name]" id="new_title">

  <br></br>

  <label> Landmarks </label>

  <br></br>

  <% @landmarks.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input><br>
  <% end %>

  <br></br>

  <label> Create New Landmark: </label>

  <br></br>
  <label> Name </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label> Year </label>

  <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Edit Figure">

</form>
