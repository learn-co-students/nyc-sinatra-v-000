<form class="" action="/figures/<%=@figure.id%>" method="post">

  <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">

  <br></br>

  <h2><label>Titles</label></h2>
<br></br>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title)%>">
  <%=title.name%></input>
  <%end%>

  <br></br>

  <h2>New Titles</h2>
  <br></br>

  <input type="text" name="title[name]" value="">

  <br></br>
  <h2>New Landmarks</h2>
  <br></br>

  <input type="text" name="landmark[name]" value="" id="new_landmark">

  <br></br>

  <input type="submit" name="submit" value="Edit Figure">

</form>
