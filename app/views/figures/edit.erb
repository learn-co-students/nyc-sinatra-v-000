<h3> Edit figure: </h3>

<form action="/figures/<%= @figure.id %>"  method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <h4> Name: </h4>
    <input type="text" id="figure_name" name="figure[name]" placeholder="<%= @figure.name %>">

  <h4> Title(s): </h4>
  <%@titles.each do |title|%>
   <input type="checkbox" name="figure[title_ids][]" id="<%= title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
   <%end%>
   <p>Or Enter a New Title: <input type='text' name='title[name]' id='Title Name' ></input></p>

  <h4> Landmark(s): </h4>
    <%@landmarks.each do |landmark|%>
     <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
     <%end%>
     <p>Or Enter a New Landmark: <input type='text' name='landmark[name]' id='new_landmark' ></input></p>

  <input type="submit" value="Edit Figure">

</form>
