<h1>Edit your Figure!</h1>

<form method="POST" action="/figures/<%=@figure.id%>">
  <input type="hidden" name="_method" value="PATCH">

  <label>Name:</label><br>

  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br><br>

  Select a Title: <br><br>
  <%@all_title.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input><br>
  <%end%>
  <br>

  <label>Add a new Title!</label><br>

  <input type="text" name="title[name]" id="new_title"><br>

  <br>

  Select a Landmark: <br><br>
  <%@all_land.each do |land|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=land.id%>" id="landmark_<%=land.id%>" <%='checked' if @figure.landmarks.include?(land)%>><%=land.name%></input><br>
  <%end%>

  <br><br>

  <label>Add a new Landmark!<label><br>

  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" value="Edit Figure">
</form>
