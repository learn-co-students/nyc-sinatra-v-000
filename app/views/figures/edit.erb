<h1>Edit Figure <%=@figure.name%>: </h1>
<form method="post" action="/figures/<%=@figure.id%>">
  <label>Edit Name: </label>
  <br></br>
  <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">
  <br></br>
  <label>New landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <label>Edit title: </label>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
  <br></br>
  <%end%>
  <input type="submit" value="Edit Figure">
</form>
