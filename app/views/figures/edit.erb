<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label> Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"> </br>

  </br>

  <label> Titles: </label></br>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>></br>
    <% end %>

  </br>

  <label> Create new Title: </label></br>
    <input id="new_title" type="text" name="title[name]"> </br>

  </br>

  <label> Landmarks: </label></br>

  </br>
    <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>></br>
    <% end %>

  </br>

  <label> Create new Landmark: </label></br>

  </br>

    Name: <input id="new_landmark" type="text" name="landmark[name]"> </br>
    Year: <input type="text" name="landmark[year_completed]"> </br>

  </br>

  <input type="submit" value="Edit Figure">
</form>
