<html> 


<body>
  <h1><%= @figure.name %></h1>

    <form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    
    <label for="figure_name"> Figure Name:</label>
    <input type="text" name= "figure[name]" id="figure_name" value="<%=@figure.name%>">
    
    <label>Titles:</label><br>
       <% Title.all.each do |title| %>
       <%= title.name %>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><br>
      <% end %>
      
     <p>Or Create New Title:</p><br>
       <label for="title_name"> Title Name:</label>
       <input type="text" name= "title[name]" id="new_title">
    
    <label>Landmarks:</label><br>
       <% Landmark.all.each do |landmark| %>
       <%= landmark.name %>
       <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"<%= 'checked' if @figure.landmarks.include?(landmark) %>><br>
      <% end %>
      
      
       
       Or Create new Landmark: <input type="text" id="new_landmark" name="landmark[name]">
     <input type="text" id="new_landmark_year_completed" name="landmark[year_completed]" >
       
        <input type="submit" id="submit" value="Edit Figure">

       

    
  
  
   
  </form>
  
</body>
</html>


