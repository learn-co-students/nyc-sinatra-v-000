<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  
  <br></br>
  <label>New Landmark</label>
    <br>
    <label>Landmark Name:</label>
      <input type="text" name="landmark[name]" id="new_landmark"></input>
    <br>

  </br>
  <label>Update Titles:</label>
  
  <br></br>
  
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
  <%end%>
  
  <br></br>
  <input type="submit" value="Edit Figure">
  </form>