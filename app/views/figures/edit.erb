<h1>Edit a Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <br></br>
  <input id="hidden" type="hidden" name="_method" value="patch">

  Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <br></br>


  <% @titles.each do |title|%>
    Title: <input type="checkbox" name="figure[title_ids][]"
    id="title_<%= title.id %>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
  <%end%>


  <% @landmarks.each do |landmark|%>
    Landmark: <input type="checkbox" name="figure[landmark_ids][]"
    id="landmark_<%= landmark.id %>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>
    Name: <input  type="text" name="landmark[name]" id="new_landmark" value="landmark.name"></input><br>>
    Year: <input  type="text" name="landmark[year]" id="new_landmark" value="landmark.year_completed"></input><br>
  <%end%>



  <input type="submit" value="Edit Figure">
</form>
