<h3>Edit <%= @figure.name %></h3>
<form method="POST" action="/figures/<%= @figure.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    
    <label for="figure_name">Figure Name</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
    <br>

    <label>Figure Titles</label>
    <% Title.all.each do |title| %>
        <br><input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %>
    <% end %>
    <br>
    
    <label>Figure Lankmarks</label>
    <% Landmark.all.each do |landmark| %>
        <br><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <% end %>
    <br>
    
    <label for="title_name">New Title</label>
    <input type="text" name="title[name]" id="new_title">
    <br>
   
    <label for="landmark_name">New Landmark</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <br>

    <input type="submit" value="Edit Figure">
</form>
