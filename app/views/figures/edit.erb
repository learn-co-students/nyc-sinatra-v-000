<form action="/figures/<%=@figure.id%>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <label for="figure_name">Name</label>
    <input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>">

    <h1>Titles</h1>
    <%Title.all.each do |title|%>
        <label for="<%=title.id%>"><%=title.name%></label>
        <input id="<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
    <%end%>

    <label for="new_title">Create New Title:</label>
    <input id="new_title" type="text" name="title[name]">

    <%Landmark.all.each do |landmark|%>
        <label for="<%=landmark.id%>"><%=landmark.name%></label>
        <input id="<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>>
    <%end%>

    <label for="new_landmark">Create New Landmark:</label>
    <input id="new_landmark" type="text" name="landmark[name]">

    <input type="submit" value="Edit Figure">

</form>
