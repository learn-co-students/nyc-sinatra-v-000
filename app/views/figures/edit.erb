<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Name</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br>
  <br>

  <label>Titles</label>
  <br>
  <br>

    <% Title.all.each do |title|%>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%= 'checked' if @figure.title_ids.include?(title.id)%>><%= title.name %></input>
      <br>
    <% end %>
  <br>
  <br>

  <label>Create New Title</label>
    <input type="text" id="new_title" name="title[name]">
  <br>
  <br>

  <label>Landmarks</label>
  <br>
  <br>

    <% Landmark.all.each do |landmark|%>
      <input type="checkbox" id ="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%= 'checked' if @figure.landmark_ids.include?(landmark.id)%>><%= landmark.name %></input>
      <br>
    <% end %>
  <br>
  <br>

  <label>Create New Landmark:</label>
  <br>
    <label>Name</label>
    <input type="text" id="new_landmark" name="landmark[name]">
    <label>Year:</label>
    <input type="integer" name="landmark[year]">
  <br>
  <br>

  <input type="submit" value="Edit Figure">
</form>
