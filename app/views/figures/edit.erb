<h1>Edit <%= @figure.name %></h1>

<form method="post" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="PATCH">
  <label>Name</lable>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
</br>
  <label> Titles </label>
  <% Title.all.each do |title| %>
  <label><%=title.name%></label>
   <input id="title_<%=title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
  <% end %>
</br>
 <label>Create New Title</lable>
   <input type="text" name="title[name]" id="new_title">
</br>
   <label> Landmarks </label>
   <% Landmark.all.each do |landmark| %>
     <label><%=landmark.name%></label>
    <input id="landmark_<%=landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
   <% end %>
</br>
  <label>Create New Landmark</lable></br>
  Name:  <input type="text" name="landmark[name]" id="new_landmark"></br>

    <input type="submit" value="Edit Figure">
</form>
