<h3>Edit Figure</h3>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

<p>
  <label>Name</label>
  <input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>">
</p>

<p>
  <label>Title(s):</label><br>
   <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>><label><%= title.name %></label><br>
   <% end %>

  <br>

  <label>Add Title: </label>
  <input id="new_title" type="text" name="title[name]">
</p>

<p>
  <label>Landmark(s):</label><br>
   <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>><label><%= landmark.name %></label><br>
   <% end %>

  <br>

  <label>Add Landmark: </label>
  <input id="new_landmark" type="text" name="landmark[name]">
</p>

  <input type="submit" value="Edit Figure">
</form>
