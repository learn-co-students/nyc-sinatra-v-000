<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch" id="hidden">
  <label for="figure_name">Name:</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">
  <h3>Titles</h3>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id %>" <%='checked' if @figure.titles.include?(title) %> id="title_<%= title.id %>"><%= title.name %></input><br>
  <% end %>
  <h4>Create a New Title</h4>
  <label for="new_title">New Title:</label>
  <input type="text" name="title[name]" id="new_title"><br>
  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%> id="landmark_<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>
  <label for="new_landmark">New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <label for="landmark_year_completed">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"><br>
  <input type="submit" value="Edit Figure">
</form>
