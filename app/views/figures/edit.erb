<h1>Edit a Figure</h1>
<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <h3>
    <label for="figure_name">Figure Name:
      <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">
    </label>
  </h3>
  <br>
  <h3>
    Select An Existing Title
    <% @titles.each do |title| %>
    <label>
      <%= title.name %>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
    </label>
    <% end %>
  </h3>
  <br>
  <h3>
     <label>Or, create one!
       <input type="text" name="title[name]" id="new_title">
     </label>
  </h3>
  <br>
  <h3>
    Select an Existing Landmark
    <% @landmarks.each do |landmark| %>
    <label>
      <%= landmark.name %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
    </label>
    <br>
    <% end %>
  </h3>
  <br>
  <h3>
    Or Creat One...
    <label>Landmark Name:
      <input type="text" name="landmark[name]" id="new_landmark">
    </label>
    <br>
    <label>Year Completed:
      <input type="text" name="landmark[year_completed]" id="year_completed">
    </label>
  </h3>
  <input type="submit" value="Edit Figure">
</form>
