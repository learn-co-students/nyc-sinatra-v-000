<h2>Edit Historical Figure</h2>

<form method="post" action="/figures/<%= @figure.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <p>Name: <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>"></p><br></br>

    <h3>Titles</h3>
    <% Title.all.each do |title| %>
        <p><%= title.name %><input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>></p>
    <%end%>

    <h3>Create New Title:</h3>
    <input type="text" id="new_title" name="title[name]">

    <h3>Landmarks</h3>
    <% Landmark.all.each do |landmark| %>
        <p><%= landmark.name %><input type="checkbox" id="landmark_<%= landmark.id %>"name="figure[landmark_ids][]" value="<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark) %>></p>
    <%end%>

    <h3>Create New Landmark:</h3>
    <p>Name: <input type="text" id="new_landmark" name="landmark[name]"></p>
    <p>Year Completed: <input type="text" name="landmark[year_completed]"></p>
    
    <input type="submit" value="Edit Figure">

</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
