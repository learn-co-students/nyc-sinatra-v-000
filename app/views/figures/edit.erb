<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="figure_name">Figure Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"></input><br>

  <h3>Titles</h3>

  <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.title_ids.include?(title.id) %>></input> <%= title.name %> <br>
  <% end %>
  
  <br>

  <h4>Create New Title:</h4>

  <label for="new_title">Name: </label>
    <input type="text" id="new_title" name="title[name]"></input>
    
  <br></br>

  <h3>Landmarks</h3>
 
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"></input> <%= landmark.name %> <br>
  <% end %>
  
  <br></br>

  <h3>Create New Landmark:</h3>

  <label for="new_landmark">Name: </label>
    <input type="text" id="new_landmark" name="landmark[name]"></input>
    <label for="new_landmark_year">Year:</label>
  <input type="text" id="new_landmark_year" name="landmarks[year]"></input>
  
  <br></br>

  <input type="submit" value="Edit Figure"></input>

</form>
