<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch"></input>
  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name"></input><br><br>
  <h3>Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= "title_#{title.id}" %>"><%= title.name %></input><br>
  <% end %>

  <h3>Create New Title: </h3>
  <label for="new_landmark_name">Title Name:</label>
  <input type="text" name="title[name]" id="new_title"></input><br><br>

  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= "landmark_#{landmark.id}" %>"><%= landmark.name %></input><br>
  <% end %>
  <br>
  <h3>Create New Landmark: </h3>
  <label for="new_landmark_name">Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input><br><br>
  <label for="new_landmark_year">Landmark Year:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></input><br><br>
  <input type="submit" value="Edit Figure"></input>
</form>
