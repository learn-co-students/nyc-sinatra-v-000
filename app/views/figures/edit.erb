<h1>Edit a Figure</h1>
<% binding.pry %>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <p>Figure Name:<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>

  <h4>Titles</h4>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids]"><%=title.name%></input>
    <%='checked' if @figure.titles.include?(title) %>>
  <%end%>


  <p>New Landmark:<input type="text" name="new_landmark" id="new_landmark">

  <input type="submit" value="Edit Figure">
</form>
