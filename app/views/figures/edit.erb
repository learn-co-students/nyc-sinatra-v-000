<h1>Edit A Figure</h1>

<form method="POST" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p><label>Name: </label><input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name"></p>

  <p><%@titles.each do |title|%>
        <input type="checkbox" name="figure[title_ids]" value="<%=title.id%>" id="<%=title.name%>"<%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
      <%end%></p>

  <p><label>Landmark Name: </label> <input type="text" name="landmark[name]" id="new_landmark"></p>

  <input type="submit" value="Edit Figure">
</form>
