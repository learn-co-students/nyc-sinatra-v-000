<h1>Update a Figure <%=@figure.name%></h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name">Figure: </label>
  <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">

  <br>
  <h3>Titles: </h3>
  <br>

  <% Title.all.each do |title| %>
    <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"
     <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input><br>
  <% end %>

  <br>

  <p>and/or, create a new title:</p>
  <label>Title Name: </label>
  <input type="text" name="title[name]" id="new_title">

  <br>
  <h3>Figure Landmark: </h3>
  <br>

  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"
    <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input><br>
  <% end %>

  <br>

  <p>and/or, create a new landmark:</p>
  <label>Figure Name:</label><input type="text" name="landmark[name]" id="new_landmark">
  <label>Year:</label><input type="text" name="landmark[year_completed]">

  <br>

  <input type="submit" value="Edit Figure">
</form>
