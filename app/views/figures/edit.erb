<h2>Edit Figure: <%=@figure.name%></h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <h4>Name: <input type="text" name="figure[name]" id="figure_name"></h4>

  <h3>Titles:</h3>
  <h4>Choose From Existing Titles</h4>
  <h5><%Title.all.each do |title|%>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
      <%=title.name%>
      <br>
    <%end%></h5>

  <h4>and/or Create New Title</h4>
    <input type="text" name="title[name]" id="new_title">
    <br><br>

  <h3>Landmarks:</h3>
  <h4>Choose From Existing Landmark</h4>
    <h5><%Landmark.all.each do |landmark|%>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>>
      <label for="landmark_<%=landmark%>"><%=landmark.name%></label><br>
    <%end%></h5>

  <h4>and/or Create a New Landmark:</h4>
    <input type="text" name="landmark[name]" id="new_landmark">
    <br><br>

  <input type="submit" value="Edit Figure">
</form>
