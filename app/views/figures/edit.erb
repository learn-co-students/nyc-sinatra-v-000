<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="patch">
  <h1>Name</h1>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>">
  <h1>Edit Landmarks:</h1>

  <% Landmark.all.each do |landmark| %>
    <h1><%= landmark.name %></h1>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
  <%end%>
  <h1>Add New:</h1>
  <input type="text" id="new_landmark" name="landmark[name]">

  <h1>Edit Titles:</h1>
  <% Title.all.each do |title| %>
    <h2><%= title.name %></h2>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
  <%end%>

  <h1>Add New Title:</h1>
  <input type="text" id="new_title" name="title[name]">
  <input type="submit" value="Edit Figure">

</form>
