<form action="/figures/<%=@editfigure.id%>" method="post">
  <input type="hidden" name="_method" id="hidden" value="patch">
    <label for="figure[name]">Figure Name</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@editfigure.name%>">
    <br>
    <label for="landmark[name]">Landmark Name</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <br>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%='checked' if @editfigure.landmarks.include?(landmark)%>><%=landmark.name%>
        <% end %>
        <br>
    <label for="title[name]">Title</label>
    <input type="text" name="title[name]" id="new_title">
    <br>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%='checked' if @editfigure.titles.include?(title)%>><%=title.name%>
        <% end %>

    <input type="submit" value="Edit Figure">
    
    </form>