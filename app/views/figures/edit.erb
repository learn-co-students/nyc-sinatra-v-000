
<h1> Editing "<%= @figure.name %>"</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <label for="figure_name"> New Figure Name: </label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

  <label> Select an Existing Title(s): </label>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"> <%= title.name %> </input>
  <% end %>

  <label for="new_title"> Or Create a New Title: </label>
  <input type="text" name="title[name]" id="new_title">

  <label> Select an Existing Landmark(s): </label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"> <%= landmark.name %> </input>
  <% end %>

  <label for="new_landmark"> Or Create a New Landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" value="Edit Figure">
</form>
