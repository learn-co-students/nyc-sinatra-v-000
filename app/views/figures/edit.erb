<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>
  <p>Titles:<p>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"
    <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
  <% end %>
  <p>Create New Title:</p>
  <input type="text" name="title[name]" id="new_title">
  <p>Landmarks:<p>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"
    <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
  <% end %>
  <p>Create New Landmark:</p>
  Name: <input type="text" name="landmark[name]" id="new_landmark">
  Year: <input type="text" name="landmark[year_completed]">
  <br>
  <input type="submit" id="Edit Figure">
</form>
