<h2>Edit Figure</h2>

<form class="figure" action="/figures/<%=@figure.slug%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" id="Figure Name" placeholder="Figure Name" value="<%=@figure.name%>"><br>
  <h4>Titles:</h4>
  <%@titles.each do |t|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%=t.name%>" value="<%=t.id%>" <%="checked" if @figure.titles.include?(t)%>>
    <label for="<%=t.name%>"><%=t.name%></label><br>
  <%end%>
  <h5>And/Or Create a New Title:</h5>
  <input type="text" name="title[name]" id="Title Name" placeholder="Title Name">
  <h4>Landmarks:</h4>
  <%@landmarks.each do |l|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%=l.name%>" value="<%=l.id%>" <%="checked" if @figure.landmarks.include?(l)%>>
    <label for="<%=l.name%>"><%=l.name%></label><br>
  <%end%>
  <h5>And/Or Create a New Landmark:</h5>
  <input type="text" name="landmark[name]" id="Landmark Name" placeholder="Landmark Name">
  <input type="text" name="landmark[year_completed]" id="Landmark Year Completed" placeholder="Landmark Year Completed">
  <br>
  <input type="submit" name="edit" value="Edit Figure">
</form>
