<form action="/figures/<%=@figure.id%>" method="post">
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br>
  <br>
  <% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>" <%='checked' if @figure.titles.include?(t) %>> <%= t.name %></input><br>
  <% end %>
  <p>Create New Title</p> <input type="text" name="title[name]" id="new_title"><br>
  <br>
  <br>
  <% @landmarks.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>" id="landmark_<%=l.id%>" <%= 'checked' if @figure.landmarks.include?(l)%> ><%= l.name %></input><br>
  <% end %>

   <p>Create New Landmark</p>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <button type="submit" value="Edit Figure">Edit Figure</button>

 </form>
