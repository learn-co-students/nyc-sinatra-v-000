<h2>Edit Figure:</h2>

<form action="/figures/<%=@figure.id%>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <div class="figure">
    <label for="figure[name]">Name: </label><input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name"></input>
  </div>

  <div class="titles">
    <h2>Titles</h2>
    <%@titles.each do |title|%>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
      <br>
    <%end%>

    <h2><label for="title[name]">Create New Title:</label></h2>
    <p>
      <input type="text" name="title[name]" id="new_title"></input>
    </p>

  </div>

  <div class="landmarks">
    <h2>Landmarks</h2>
    <%@landmarks.each do |landmark|%>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
      <br>
    <%end%>
    </br>
    <h2>Create New Landmark: </h2>

    <label for="landmark[name]">Name: </label><input type="text" name="landmark[name]" id="new_landmark"></input>
    <label for="landmark[year_completed]">Year: </label><input type="text" name="landmark[year_completed]" id="new_year_completed"></input>
    <input type="submit" value="Edit Figure" id="submit"></input>
  </div>
  </form>
<br>


<footer>
  <a class="button" href="/figures">Figures</a>
  <a class="button" href="/">Home</a>
</footer>
