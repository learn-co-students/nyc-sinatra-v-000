<form method="POST" action="/figures/<%=@figure.id%>">
  <input type="hidden" id="hidden" name="_method" value="patch" />

  <label for="figure[name]">Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value = "<%=@figure.name%>"/>
  <br />

  <label for="figure[title_ids][]">Figure Titles: </label>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" <%="checked" if @figure.titles.include?(title) %>><%=title.name%></input>
  <%end%>
  <br />

  <label for="figure[landmark_ids][]">Figure Landmarks: </label>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" <%="checked" if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <%end%>
  <br />
  <h4>Create New Landmark</h4>
  <input type="text" id="new_landmark" name="landmark[name]" />
  <input type="text" id="new_landmark_year_completed" name="landmark[year_completed]" />
  <input type="submit" value="Edit Figure" id="Edit Figure" />
</form>
