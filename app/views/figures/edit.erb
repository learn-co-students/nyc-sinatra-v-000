<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="">Figure Name: </label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

    <h3>Assign a title: </h3>
    <ul>
    <% @titles.each.with_index do |title, i| %>
        <%= "<br>" if i != 0 %>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= "checked" if !@figure.titles.empty? && @figure.titles[0].id == title.id %> >
            <%= title.name %>
        </input>
    <% end %>
    </ul>

    <p>and/or create a new one: </p>
    <input type="text" name="title[name]" id="new_title">

    <h3>Assign a landmark: </h3>
    <ul>
    <% @landmarks.each.with_index do |landmark, i| %>
        <%= "<br>" if i != 0 %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark<%= landmark.id %>" <%= "checked" if !@figure.landmarks.empty? && @figure.landmarks[0].id == landmark.id %> >
            <%= landmark.name %>
        </input>
    <% end %>
    </ul>

    <p>and/or create a new one: </p>
    <label for="landmark_name">name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="landmark_year">year: </label>
    <input type="text" name="landmark[year_completed]" id="landmark_year">

    <input type="submit" value="Edit Figure">
</form>