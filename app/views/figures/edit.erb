<!-- the input's name field is how you're structuring the params hash -->

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">
  Update Name<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br>
  <br>
  <h2>Titles</h2>
  <br>
  <% Title.all.each do |title| %>
    <%= title.name %> <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" <%='checked' if @figure.figure_titles.include?(title.id)%> value="">
    <br>
  <% end %>
  <br>
  <h2>Create New Title: </h2>
  <input type="text" name="title[name]" id="new_title" value="">
  <br>
  <h2>Landmarks</h2>
  <br>
  <% Landmark.all.each do |landmark| %>
    <%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" <%='checked' if @figure.landmarks.include?(landmark.name)%> value="">
    <br>
  <% end %>
  <br>
  <h2>Create New Landmark: </h2>
  Name: <input type="text" name="landmark[name]" id="new_landmark" value="">
  Year: <input type="number" name="landmark[year]" value="">
  <input type="submit" value="Edit Figure">
</form>
