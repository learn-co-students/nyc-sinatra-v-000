<h1>Edit Figure</h1>
<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br></br>
  <label for="titles"><b>Titles</b></label>
  <br></br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%="checked" if @figure.titles.include?(title)%>><%=title.name%></input>
    <br>
  <% end %>
  <br></br>

  <label for="new_title"><b>Create New Title:</b></label>
  <br></br>
  <input type="text" id="new_title" name="title[name]">

  <br></br>

  <label for="landmarks"><b>Landmarks</b></label>

  <br></br>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%="checked" if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
    <br>
  <% end %>

  <br></br>

  <label><b>Create New Landmark:</b></label>
  <br></br>
  <label for="new_landmark">Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label for="new_landmark_year">Year:</label>
  <input type="text" id="new_landmark_year" name="landmark[year_completed]">
  <input type="submit" value="Edit Figure">
</form>
