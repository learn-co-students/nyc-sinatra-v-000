<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">
  <br></br>

  <label>Titles:</label>
  <%@titles.each do |title|%>
  <%=title.name%>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"<%='checked' if @figure.titles.include?(title) %>>
  <%end%>
  <br></br>
  <h2>Or Create a New Title</h2>
  <input type="text" name="title[name]" id="new_title">
  <br></br>

  <label>Landmarks:</label>
  <%@landmarks.each do |landmark|%>
  <%=landmark.name%>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark) %>>
  <%end%>

  <h2>Or Create New Landmark:</h2>
  <label>Name:<input type="text" name="landmark[name]" id="new_landmark"></label>  <label>Year: <input type="text" name="landmark[year_completed]"></label>
  <input type="submit" name="submit" value="Edit Figure">
</form>
