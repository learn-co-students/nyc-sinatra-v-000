<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">
  <br>
  <h3>Titles</h3>
  <% Title.all.each do |title|%>
    <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"
    <%= 'checked' if @figure.titles.include?(title)%>><%= title.name %></input>
    <br>
  <% end %>
  <h3>Create New Title:</h3>
  <input id="new_title" type="text" name="title[name]">
  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>"type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"
    <%= 'checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %></input>
    <br>
  <% end %>
  <h3>Create New Landmark:</h3>
  <label>Name: </label>
  <input id="new_landmark" type="text" name="landmark[name]">
  <label>Year: </label>
  <input type="text" name="landmark[year_completed]">
  <input type="submit" name="submit" value="Edit Figure">
</form>
