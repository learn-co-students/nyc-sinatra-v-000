<h1>Update Figure <%= @figure.name %></h1>

<form method="POST" action="/figures/<%= @figure.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">

<label for="">Name</label>
<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>
<h2>Titles</h2>
<% @titles.all.each do |title|%>
  <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
<% end %>
<h2>Create New Title: </h2>
<input type="text" id="new_title" name="title[name]"><br>
<h2>Landmarks</h2>
<% @landmarks.all.each do |landmark|%>
  <input type="checkbox" id="landmark_<%= landmark.id %>"  name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
<% end %>
<h2>Create New Landmark: </h2>
<label for="">Name: </label>
<input type="text" id="new_landmark" name="landmark[name]"><br>
<label for="">Year: </label>
<input type="text" name="landmark[year]"><br><br>
<input type="submit" value="Edit Figure">
</form>
