<h2>Edit: <%= @figure.name %></h2>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name:</label><input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br></br>\

    <label>Current Landmark(s):</label>
      <% @landmarks.each do |landmark|%>
        <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"
        <%='checked' if @figure.landmarks.include?(landmark) %>>
        <%=landmark.name%></input>
      <% end %><br></br>
    <label>Create a New Landmark:</label><br></br>
      <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark"></input><br></br>
      <label>Year Completed:</label><input type="text" name="landmark[year_completed]"></input><br></br>

    <label>Current Title(s):</label>
      <% @titles.each do |title|%>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"
        <%='checked' if @figure.titles.include?(title) %>>
        <%=title.name%></input>
      <% end %><br></br>
    <label>Create a New Title:</label><br></br>
    <label>Title:</label><input type="text" name="title[name]"></input><br></br>

    <input type="submit" name="Edit Figure" value="Edit Figure" id="Edit Figure">
    </form><br></br>

<a class="button" href="/figures">Figures Index</a><br></br>
<a class="button" href="/">Home Page</a><br></br>
<a class="button" href="/landmarks">Landmarks Index</a>
