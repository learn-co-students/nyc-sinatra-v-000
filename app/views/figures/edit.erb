<h1>Edit <%=@figure.name%></h1>
<form method="POST" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name: </label><input type="text" id="figure_name" name="figure[name]" value="figure[name]"/><br>

  <h2>Title: </h2><br>
  <%Title.all.each do |title|%>
  <br>
  <label><%=title.name%></label>
  <input type="checkbox" id="<%=title.name%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>/>
  <%end%>
  <br><label>Add New Title</label><br>
  <input type="textbox" id="figure_title" name="title[name]"><br><br>

  <h2>Landmark: </h2><br>
  <%Landmark.all.each do |landmark|%>
  <br>
  <label><%=landmark.name%></label>
  <input type="checkbox" id="<%=landmark.name%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>/>
  <%end%>
  <br><label>Add New Landmark</label><br>
  <input type="textbox" id="new_landmark" name="landmark[name]"><br><br>

  <input type="submit" value="Edit Figure"/>

</form>
