<h2>Edit this Historical Figure:</h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  
  <label for="figure_name">Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value= "<%=@figure.name%>">
  
  <h3>Edit Titles</h3>
    <% Title.all.each do |title|%>
     <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title) %>><%=title.name%></input><br>
     
  <%end%>
  
  <br>
  
  <h3>or Create New Title:</h3>
  <input type="text" name="title[name]" id="new_title">
  
  <h3>Landmarks:</h3>
     <% Landmark.all.each do |landmark|%>
     <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input><br>
  <%end%>
  
  <h3>or Create New Landmark:</h3>
     <label for="landmark_name">Name:</label>
     <input type="text" name="landmark[name]" id="new_landmark">
     <label for="landmark_year">Year:</label>
     <input type="text" name="landmark[year_completed]" id="landmark_year">
  <br>
  <input type="submit" value="Edit Figure">
  
  
</form>