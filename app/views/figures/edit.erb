<form action="/figures/<%=@figure.id%>" method="POST">
  <input="hidden" name="_method" value="PATCH">
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br>
  <label>Title:</label>
   <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>

    <% end %>
    
     <label><h4>Create New Title:</h4></label>
  <input type="text" id="new_title" name="title[name]">
  
  <label><h4>landmarks</h4></label>
  <% Landmark.all.each do |landmark| %>
  <label><%=landmark.name%></label>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>
  <h2>Create New Landmark</h2>
  <label>Name</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <label for'landmark_year_completed'>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" >
  <br>
  <input type="submit" value="Edit Figure">
</form>
