<h2>Edit Historical Figure</h2>

<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: </label><%= @figure.name %>
  <label>New Name: </label><input type="text" name="figure[name]">
  <label>Titles: </label>
  <% @figure.each do |f|%>
  <%= @figure.title%>
  <% end %>
  <label>New Titles: </label><input type="text" name="figure[title_ids]">
  <input type="submit" value="submit">
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>