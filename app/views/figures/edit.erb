<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
<!--  <input name="_method" type="hidden" value="patch"/> -->

  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br></br>
  <label>Titles:</label>
  <br></br>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
    <%end%>
    <br></br>
    <label>Create New Title:</label>
    <br></br>
      <input type="text" name="title[name]" id="new_title">
      <br></br>
      <label>Landmarks:</label>
      <br></br>
      <%@landmarks.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
        <%end%>
        <br></br>
        <label>Create Landmark:</label>
        <br></br>
          <input type="text" name="landmark[name]" id="new_landmark">


  <input type="submit" value="Edit Figure">
</form>
