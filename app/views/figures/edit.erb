<h2>Edit Historical Figure</h2>

<!-- add content here -->
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="figure_name">Edit Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></label>
  <br></br>
  <h2>Titles: </h2>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
  <% end %>
  <br></br>
  <h2>Edit Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
  <% end %>
  <br></br>
  <h2>Add New Landmark:</h2>
    <label for="new_landmark"><input type="text" name="landmark[name]" id="new_landmark"></label>
  <br></br>
  <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/figures">Landmarks</a><br>
<a class="button" href="/">Home</a>
