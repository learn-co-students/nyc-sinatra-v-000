<h1>Edit <%=@figure.name%></h1>
<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h3><label>Edit Figure Name:</label></h3>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>

  <h3><label>Edit Title:</label></h3>
  
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
  <% end %></br>
  
  <h3><label>Create New Title:</label></h3>
  <input type="text" id="new_title" name="title[name]"><br>

  <h3><label>Edit Landmark:</label></h3>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>
 
  <h3><label>Create New Landmark:</label></h3>
  <label>Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]">
  <br></br>
  <input type="submit" value="Edit Figure">

</form>