<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
	<input type="hidden" type="hidden" name="_method" value="PATCH">
	<label for= "Figure Name">Name:</label>
	<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
	<br>
	<h3>Titles:</h3>
	<% @titles.each do |title| %>
		<input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
	<% end %>
	<br>
	<h3>Create New Title:</h3>
	<input id="new_title"type="text" name="title[name]">
	<br>
	<h3>Landmarks</h3>
	<% @landmarks.each do |landmark| %>
		<input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
	<% end %>
	<br>
	<h3>Create New Landmark:</h3>
	Name: <input id="new_landmark" type="text" name="landmark[name]">
	Year: <input type="integer" name="landmark[year_completed]">
	<br>
	<br>
	<input type="submit" value="Edit Figure">
</form> 