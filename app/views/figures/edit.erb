<h2>Edit Historical Figure</h2>

<form method="post" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" id="figure_name" placeholder="<%= @figure.name %>">
  <br>
  <input type="text" name="landmark[name]" id="new_landmark" placeholder="Landmark Name">
  <br>
  <p>Titles:</p>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
    <br>
  <% end %>
  <br>
  <input type="submit" name="Edit Figure" id="Edit Figure">
</form>
<br>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
