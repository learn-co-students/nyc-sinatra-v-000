<form action="/figures/<%=@figure.id%>" method="Post">
<input id="hidden" type="hidden" name="_method" value="PATCH">

<h5>Name:</h5>
<input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

<h5>Edit Titles:</h5>
  <% Title.all.each do |title| %>
    <ul><label><%= title.name %></label>
    <input id="<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>></ul>
    <%end%>
  <br>
  <h3>Create New Title:</h3> <input type="text" id="new_title" name="title[name]">

  <h5>Edit Landmarks:</h5>
  <% Landmark.all.each do |landmark| %>
    <ul><label><%= landmark.name %></label>
    <input id="<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>></ul>
    <%end%>
  <br>
  <h3>Create New Landmark:</h3> <input type="text" id="new_landmark" name="landmark[name]">

<button type="submit" value="Edit Figure"/>Edit Figure</button>
</form>
