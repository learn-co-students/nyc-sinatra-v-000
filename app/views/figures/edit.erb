<h2>Edit Historical Figure</h2>

<form action="/figures/<%=@figure.id%>" method='POST'>
  
  <h3>Figure Name</h3><br>
  <input type='text' id='figure_name' name='figure[name]' value='<%=@figure.name%>'><br>
  
  <h3>Titles</h3><br>
  
  <%@titles.each do |title|%>
    <input type='checkbox' id='title_<%=title.id%>' name='figure[title_ids][]' value=<%=title.id%>><%=title.name%><br>
  <%end%>
  
  <h4>Create New Title:</h4><br>
  <input type='text' id='new_title' name='title[name]'><br>
  
  <h3>Landmarks</h3><br>
  
  <%@landmarks.each do |landmark|%>
    <input type='checkbox' id='landmark_<%=landmark.id%>' name='figure[landmark_ids][]' value=<%=landmark.id%>><%=landmark.name%><br>
  <%end%>
  
  <h4>Create New Landmark:</h4>
  <input type='text' id='new_landmark' name='landmark[name]'><br>
  
  <input type='submit' value='Edit Figure'><br>
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
