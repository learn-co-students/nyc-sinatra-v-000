<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <br></br>

  Name: <input type="text" name="figure[name]" id="figure_name">

  <br></br>


  <% @titles.each do |title|%>
    Title: <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" ><%=title.name%>
  <%end%>

  <br></br>

  <label>Create New Title:</label>
    <input  type="text" name="title[name]" id="new_title">
  <br></br>



  <% @landmarks.each do |landmark|%>
    Landmark: <input type="checkbox" name="figure[landmark_ids][]" 
    id="landmark_<%= landmark.id %>" ><%=landmark.name%>
  <%end%>

  <br></br>

  <label>Create New Landmark:</label><br>
    Name: <input  type="text" name="landmark[name]" id="new_landmark"></input><br>
    Year: <input  type="text" name="landmark[year]"></input>
  <br></br>


  <input type="submit" value="Create New Figure">
</form>
