<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="figure_name">Figure Name</label><input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"><br/>

  <label for="title">Titles:</label><br/>
  <ul style="list-style:none">
  <%@titles.each do |title|%>
      <li><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>>
        <%=title.name%></input>
      </li>
  <%end%>
  </ul>
  <label for="new_title">Create New Title:</label><input type="text" id="new_title" name="title[name]"><br/>

  <label for="title">Landmarks:</label><br/>
  <ul style="list-style:none">
  <%@landmarks.each do |landmark|%>
      <li><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>>
        <%=landmark.name%></input>
      </li>
  <%end%>
  </ul>
  <label for="new_landmark">Create New Landmark:</label><input type="text" id="new_landmark" name="landmark[name]"><br/>

  <button type="submit" value="submit">Edit Figure</button>
</form>
