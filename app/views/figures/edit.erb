<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%=@figure.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch"></input>

    <label for="name">Figure Name: </label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
    <input type="text" id="new_landmark" name="landmark[name]" >
    </br>
    <label for="title">Title:</label>
    <%Title.all.each do |title| %>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
    <% end %>
    </br>
    </br>
    <input type="text" id="new_title" name="title[name]" value="new title">
    </br>
    </br>
    <label>Landmarks</label>
    </br>
    </br>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmarks_id][]" value="<%= landmark.id%>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%>
    <% end %>
    </br>
    </br>

    <input type="submit" name="Edit" id="Edit Figure">
</form>
