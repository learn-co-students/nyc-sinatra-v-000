<h1><%=@figure.name%>'s Edit Page</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="name">Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

    <h2>Titles</h2>

    <%@titles.each do |title|%>
      <label for="title_<%=title.id%>"><%=title.name%></label>
      <input type="checkbox"  id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%> >
    <%end%>

    <h3>Create New Title</h3>
        <input type="text" id="new_title" name="title[name]">

    <h2>Landmarks</h2>
      <%@landmarks.each do |landmark|%>
        <label for="landmark_<%=landmark.id%>"><%=landmark.name%></label>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%> >
      <%end%>

      <h3>Create New Landmark</h3>
        <label for="new_landmark">Name:</label>
        <input type="text" id="new_landmark" name="landmark[name]">

        <label for="landmark_year">Year:</label>
        <input type="text" id = "landmark_year" name="landmark[year_completed]">

    <br><input type="submit" value="Edit Figure">

</form>
