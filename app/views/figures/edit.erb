   </head>
    <body>
     <h1>Edit <%=@figure.name%></h1>

  <form action="/figures/<%=@figure.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <input type="text" name="figure[name]" id="figure_name" >

    <br></br>

    <label>Titles</label><br>
    <%Title.all.each do |title|%>
      <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
      <%end%>
    <br></br>
    <label>Edit Title:</label>
    <br></br>
    <label>Name:</label>
      <input type="text" id="new_title" name="title[name]"></input>

    <br></br>

    <label>Edit Landmark:</label>
    <br></br>
    <label>Name:</label>
      <input type="text" id="new_landmark" name="landmark[name]"></input>

    <br></br>
      <input type="submit" value="Edit Figure">
  </body>
 </html>
</form>
