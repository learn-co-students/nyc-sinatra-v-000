<h1>Edit a Figure</h1>
<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="figure_name">Name </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></input>
  <h3>Titles</h3>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%= title.name %></input><br>
  <% end %>
  <h3>Create New Title:</h3>
  <input type="text" id="new_title" name="title[name]">
  <br>
  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
  <% end %>
  <h3>Create New Landmark:</h3>
  <label>Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]">
  <input type="submit" id="Edit Figure" value="Edit Figure"></input>
</form>
