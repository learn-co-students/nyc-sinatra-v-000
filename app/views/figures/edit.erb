<h2>Edit Historical Landmark</h2>

<!-- add content here -->

<form class="" action="/figures/<%= @figure.id %>" method="post">
   <input id="hidden" type="hidden" name="_method" value="patch">
   <h3><label>Name</label></h3>
   <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>
   <h3><label>Title</label></h3><br>
   <% Title.all.each do |title| %>
   <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title)%>><%= title.name %></input><br>
   <% end %><br><br>
   <h3><label>Create New Title:</label></h3>
   <input type="text" name="title[name]" id="new_title" value=""><br><br>
   <h3><label>Landmarks</label></h3><br>
   <% Landmark.all.each do |landmark| %>
   <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %></input><br>
   <% end %><br><br>
   <h3><label>Create New Landmark:</label></h3>
   <label>Name</label>
   <input type="text" name="landmark[name]" id="new_landmark"><br>
   <label>Year Completed</label>
   <input type="integer" name="landmark[year_completed]" id="year_completed"><br>
   <input type="submit" value="Edit Figure">
</form>
