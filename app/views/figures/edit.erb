<form method="POST" action="/figures/<%= @figure.id %>">
    <p> Name <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"> </p>
  
    <h3> Titles </h3>
    <% @titles.each do |title| %>
        <p> <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title)%>> <%= title.name %> </input> </p>
    <% end %>

    <h3> Create New Title: </h3>
        <p> <input type="text" id="new_title" name="title[name]"> </p>
    
    <h3> Landmarks </h3>
    <% @landmarks.each do |landmark| %>
        <p> <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>> <%= landmark.name %> </input> </p>
    <% end %>

    <h3> Create New Landmark </h3>
    <p> <input type="text" id="new_landmark" name="landmark[name]"> </p>

    <input type="submit" value="Edit Figure">
</form>