<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="figure[name]">Edit Figure Name:
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  </label><br><br>

  <label for="figure[title_ids][]">Edit Titles Associated: <br>
    <% Title.all.each do |title| %>
      <input type="checkbox" <%='checked' if @figure.titles.ids.include?(title.id) %> name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %> <br>
    <% end %>
  </label><br>

  <label for="figure[landmark_ids][]">Edit Landmark Associated:<br>
    <% Landmark.all.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>
  </label>

  <label for="landmark[name]">And/Or New Landmark Associated: <br>
      <input type="text" name="landmark[name]" id="new_landmark">
  </label><br>

  <label for="title[name]">And/Or New Title Associated: <br>
      <input type="text" name="title[name]" id="new_title">
  </label> <br>

  <input type="submit" id="submit" value="Edit Figure">
</form>
