<form action="/figures" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="hidden" name="figure[id]" value="<%=@figure.id%>">
  <p><strong>Update Figure Name to:</strong> <input type="text" id="figure_name" name="figure[name]" value=""></p>

  <h3>Titles (pick from existing):</h3>
    <%@titles.each do |title| %>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
    <%end%>
  <br></br>
  <strong>....Or Create a New Title:</strong>
  <p>Title Name: <input type="text" name="title[name]" id="new_title"></p>

  <h3>Landmarks (pick from existing):</h3>
    <%@landmarks.each do |landmark| %>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
    <%end%>
  <br></br>
  <strong>....Or Create a New Landmarks:</strong>
    <p>Landmark Name: <input type="text" name="landmark[name]" id="new_landmark"></p>
    <p>Landmark Year: <input type="text" name="landmark[year_completed]" id="landmark[year_completed]"></p>
    <input type="submit" name="Edit Figure" value="Edit Figure">
</form>
