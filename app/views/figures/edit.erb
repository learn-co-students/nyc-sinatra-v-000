<h1>Edit:<%= @figure.name %></h1>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
    <label>Figure Name: </label>
      <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"><br><br>
      
    <label>Titles: </label>
      <% Title.all.each do |title| %>
        <%= title.name %>
        <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
      <% end %><br><br>
    <label>Create a New Title:</label><br></br>
      <label>Name:</label><input type="text" name="title[name]" id="new_title"></input><br><br>
    <label>Landmarks: </label>
    
    <% Landmark.all.each do |landmark| %>
       <%= landmark.name %>
       <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
       <% end %><br></br>
    <label>Create a New Landmark:</label><br></br>
      <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark"></input><br><br>
      <label>Year Completed:</label><input type="text" name="landmark[year_completed]"></input><br><br>
      
  <input type="submit" value="Edit Figure">
</form> 
