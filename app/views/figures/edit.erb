<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <label>Name:</label>
  <br><br>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br><br>
  <%Title.all.each do |title|%>
  <ul><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"<%='checked' if @figure.titles.include?(title)%>><%=title.name%></input></ul>
  <%end%>
  <br><br>
  <label>Create New Title:</label>
  <br><br>
  <input type="text" name="title[name]" value="" id="new_title">
  <br><br>
  <%Landmark.all.each do |landmark|%>
  <ul><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input></ul>
  <%end%>
  <br><br>
  <label>Create New Landmark:</label>
  <br><br>
  <label>Name:</label>
  <input type="text" name="landmark[name]" value="" id="new_landmark">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]" value="" id="landmark_year">
  <br><br>
  <input type="submit" value="Edit Figure">
</form>
