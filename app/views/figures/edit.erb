<h1>Edit Figure</h1>
<form action="/figures/<%= @figure.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
  <h4>Figure</h4>
    <label for="figure_name">Name:</label>
    <input type="text" id="figure_name" value="<%= @figure.name %>" name="figure[name]">
  </br>

  <h4>Landmarks</h4>
    <label for="new_landmark">Name:</label>
    <input type="text" id="new_landmark" value="" name="landmark[name]">
    <label for="year_completed">Year Completed:</label>
    <input type="text" id="year_completed" value="" name="landmark[year_completed]"></br>
  </br>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" name="figure[landmark_ids][]" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %> - <%= landmark.year_completed %></br>
    <% end %>

  <h4>Titles</h4>
    <label for="new_title">Name:</label>
    <input type="text" id="new_title" value="" name="title[name]"></br>
  </br>
    <% @titles.each do |title| %>
      <input type="checkbox" id="title_<%= title.id %>" value="<%= title.id %>" name="figure[title_ids][]" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></br>
    <% end %>
  </br>
  <input type="submit" value="Edit Figure">
</form>
