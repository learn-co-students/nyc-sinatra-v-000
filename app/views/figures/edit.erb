<h3>Edit <%= @figure.name %></h3>

<form action='/figures/<%=@figure.id%>' method='post'>
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name:</label><br>
  <input type='text' name='figure[name]' value='<%=@figure.name%>' id="figure_name">

  <br><br>

  <label><h4>Titles</h4></label>
    <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"
        <%='checked' if @figure.titles.include?(title) %>> <%=title.name%>
      </input>
      <br>
    <%end%>
    <br><br>

    <label><h4>Landmarks</h4></label>
      <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"
          <%='checked' if @figure.landmarks.include?(landmark) %>> <%=landmark.name%>
        </input>
        <br>
      <%end%>
      <br>
      <label>and/or create a new landmark:</label>
      <br>
      <label>Landmark</label>
      <br>
        <label>Name:</label>
          <input type='text' name='landmark[name]' id='new_landmark'>
        <br>
        <label>Year Completed:</label>
          <input type='number' name='landmark[year_completed]' id='landmark[:year_completed]'>
      <br><br>
    <input type="submit" value="Edit Figure">
</form>
