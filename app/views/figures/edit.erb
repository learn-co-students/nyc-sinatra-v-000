<h1>Edit Historical Figure</h1>

<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <h3><label for="figure_name">Name: </label></h3>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

  <h3><label>Titles</label></h3>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>> <%= title.name %> </input> <br>
  <% end %>

  <h3><label for="new_title">Create New Title:</label></h3>
  <input type="text" name="title[name]" value="" id="new_title">

  <h3><label>Landmarks</label></h3>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>> <%= landmark.name %> </input> <br>
  <% end %>

  <h3>Create New Landmark:</h3>

  <label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" value="" id="new_landmark">
  <label for="new_landmark_year">Year: </label>
  <input type="text" name="landmark[year_completed]" value="" id="new_landmark_year">

  <br><br>

  <input type="submit" value="Edit Figure">

</form>
