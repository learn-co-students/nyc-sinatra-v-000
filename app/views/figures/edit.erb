<h1>Edit <%= @figure.name %> </h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label> Historical Figure </label>
  <input id="figure_name" type="text" name="figure[name]">
  <br>
    <br><label> Title </label><br>
    <% Title.all.each do |title| %>
      <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"<%= 'checked' if @figure.titles.include?(title)%>><%= title.name %></input><br>
    <%end%>
    <br>
    <label>Create New Title</label>
    <input id="new_title" type="text" name="title[name]">

    <br>
    <br>

  <label> Landmarks </label><br>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value=" <%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %></input><br>
  <%end%>

  <br>
  <label>Create New Landmark</label>
  <label>Name:</label>
  <input id="new_landmark" type="text" name="landmark[name]">
  <label>Year:</label>
  <input id="year_completed" type="text" name="landmark[year_completed]">

  <input id="submit" type="submit" value="Edit Figure">
</form>
