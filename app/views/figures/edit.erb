<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="figure_name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>

  <h2>Titles</h2>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%="checked" if @figure.titles.include?(title)%>><%= title.name %></input><br>
  <% end %>

  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="new_title">

  <h2>Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%="checked" if @figure.landmarks.include?(landmark)%>><%= landmark.name %></input><br>
  <% end %>

  <h2>Create New Landmark:</h2>
  <label for="landmark[name]">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <label for="landmark[year_completed]">Year:</label>
  <input type="text" name="landmark[year_completed]" id="new_landmark_year">

  <br><br>

  <input type="submit" value="Edit Figure">
</form>
