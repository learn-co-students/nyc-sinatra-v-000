<h2>Edit Figure</h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name" value ="<%=@figure.name%>">
  <br><br>

  <label><strong>Title</strong></label><br>
  <%@titles.each do |title|%>
  <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"<%='checked' if @figure.titles.include?(title) %>><br>
  <% end %>

  <br></br>

  <label>Create new title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br><br>

  <label><strong>Landmarks</strong></label><br>
  <%@landmarks.each do |landmark|%>
  <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark) %>><br>
  <% end %>

  <br></br>

  <label>Create new Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  <br><br>

  <input type="submit" value="Edit Figure">

</form>
<br><br>
<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
