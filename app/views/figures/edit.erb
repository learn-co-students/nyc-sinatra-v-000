<h1>Edit <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">  

  Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></br></br>

  <h4>Titles</h4>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title)%>><%=title.name%></br>
  <% end %></br>

  Create New Title: <input type="text" name="title[name]" id="new_title"> </br></br>

  <h4>Landmarks</h4>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></br>
  <% end %></br>

  Create New Landmark: </br>
  Name:<input type="text" name="landmark[name]" id="new_landmark">  
  Year Completed: <input type="text" name="landmark[year_completed]"></br></br>

  <input type="submit" id="Edit Figure" value = "Edit Figure">
</form>