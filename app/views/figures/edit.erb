<h2>Edit Figure</h2>

<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="PATCH">
  <label for="figure[name]">Name </label><input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>"><br><br>
  
  <label for="figure[title_ids][]"><h3>Titles</h3></label>
  <% @titles.each do |title| %>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
  <% end %><br>
  
  <label for="title[name]"><b>Create New Title:</b></label><br><br>
  <input id="new_title" type="text" name="title[name]"><br><br>
  
  <label for="figure[landmark_ids][]"><h3>Landmarks</h3></label>
  <% @landmarks.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
  <% end %><br>
  
  <label><b>Create New Landmark:</b></label><br><br>
  <label for="landmark[name]">Name: </label><input id="new_landmark" type="text" name="landmark[name]"><label for="landmark[year_completed]">  Year: </label><input type="text" name="landmark[year_completed]"><br><br>
  
  <input type="submit" value="Update Figure">
</form>