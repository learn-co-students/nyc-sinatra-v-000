<h1>Edit Your Historical Figure</h1>
<h2><%= @figure.name %></h2>
<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br><br>
  <h3><label>Edit Titles</label></h3>
  <% @titles.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>>
    <br>
  <% end %>
  <br>
  <h3><label for="new_title">Create New Title:</label></h3>
  <input type="text" name="title[name]" id="new_title">
  <br>
  <h3><label>Edit Landmarks</label></h3>
  <% @landmarks.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>>
    <br>
  <% end %>
  <br>
  <h3>Create New Landmark:</h3>
  <label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark_year">Year: </label>
  <input type="text" name="landmark[year_completed]" id="landmark_year">
  <br><br>
  <input type="submit" value="Edit Figure">
</form>