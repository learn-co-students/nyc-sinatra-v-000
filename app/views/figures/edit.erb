<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>

  <h3>Existing Titles:</h3>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%=title.id%>"><%= title.name %></input>
  <% end %>
  <br>

  <h3>New Title</h3><br>
  <label for="new_title">Title Name</label>
  <input type="text" name="title[name]" id="new_title">
  <br>

  <h3>Existing Landmarks:</h3>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%=landmark.id%>"><%= landmark.name %></input>
  <% end %>
  <br>

  <h3>New Landmark</h3><br>
  <label for="new_landmark">Landmark Name</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br><br>

  <input type="submit" value="Edit Figure" id="submit">
</form>