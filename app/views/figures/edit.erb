<h1>Edit <%=@figure.name%></h1>
<form method="post" action="/figures/<%= @figure.id %>">
  <input id="hidden" type="hidden" name="_method" action="post">
  <b><label for="figure_name">Figure Name: </label></b>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br><br><br>
  <b><label for="new_title">Titles: </label></b>
  <br><br>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%= 'checked' if @figure.title_ids.include?(title.id) %> ><%=title.name%></input>
  <%end%>
  <br><br>
  Or create a new Title: <input type="text" name="title[name]" id="new_title">
  <br><br><br>
  <b><label for="landmarks">Landmarks: </label></b>
  <br><br>
  <%Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%= 'checked' if @figure.landmark_ids.include?(landmark.id) %> ><%=landmark.name%></input>
  <%end%>
  <br><br>
  Or create a new landmark: <input type="text" name="landmark[name]" id="new_landmark">
  <input type="text" name="landmark[year_completed]" id="landmark_year"

  <br><br><br>
  <input type="submit" value="Edit Figure">

</form>
