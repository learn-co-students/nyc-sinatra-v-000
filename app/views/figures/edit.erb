<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  </br>

  <h3>Edit Title</h3>
  <% Title.all.each do |title| %>
  <label><%=title.name%></label>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"
    id="<%=title.name%>"
    <%='checked' if @figure.titles.include?(title) %>>
  <%end%>
  <label>Add New Title:</label>
  <input type="text" id="new_title" name="title[name]">

  <h3>Edit Landmark</h3>
  <% Landmark.all.each do |landmark| %>
  <label><%=landmark.name%></label>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"
    id="<%=landmark.name%>"
    <%='checked' if @figure.landmarks.include?(landmark) %>>
  <%end%>
  <label>Add New Landmark:</label>
  <input type="text" id="new_landmark" name="landmark[name]">

  <input type="submit" value="Edit Figure">

</form>
