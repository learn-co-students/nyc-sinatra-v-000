<h2>Edit Figure</h2>

<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><label for="">Name: </label>
    <br>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"></p>

  <p><label for="">Title(s): </label>
    <br>
    <% @titles.each do |title| %>
      <input type="checkbox" id="<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>> <%= title.name %>
      <br>
    <% end %>
  </p>

  <p><label for="">New Title :</label>
    <br>
    <input type="text" id="new_title" name="title[name]" value="">
  </p>

  <p><label for="">Landmark(s): </label>
    <br>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" id="<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>> <%= landmark.name %>
      <br>
    <% end %>
  </p>

  <p><label for="">New Landmark: </label>
    <br>
    <input type="text" id="new_landmark" name="landmark[name]" value="" placeholder="Name">
    <br>
    <input type="text" id="new_landmark_year_completed" name="landmark[year_completed]" value="" placeholder="Year Completed">
  </p>

  <p><input type="submit" name="" value="Edit Figure"></p>
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
