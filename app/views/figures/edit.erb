<h2>Create New Figure</h2>
<!-- add content here -->
<form class="" action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Edit Figure Name</h2>
  <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">
  <br>
  <h2>Titles</h2>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%= title.name %></input>
  <!-- Failure/Error: check "title_#{Title.first.id}" means change id to include erb tags to implement ruby -->
  <% end %>
  <h2>Landmarks:</h2>
  <br>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%= landmark.name %></input>
  <% end %>
  <br>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]"  id="new_title">
  <h2>Create New Landmark:</h2>
  <label>Name:</label>
  <input type="input" name="landmark[name]" id="new_landmark">
  <!-- Failure/Error: fill_in :new_landmark, :with => "The Tardis" means id should be new_landmark not landmark_name -->
  <label>Year_Completed:</label>
    <input type="input" name="landmark[year_completed]" id="landmark_year_completed">
  <input type="submit" name="Edit Figure" value="Edit Figure">
</form>
<a class="button" href="/figures">Figures</a>
