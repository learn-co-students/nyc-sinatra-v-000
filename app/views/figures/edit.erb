<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">

  <h1>Edit <%=@figure.name%></h1>

  <label for="figure_name">Figure Name</label><br>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>
  <br>

  <label>Existing Titles</label><br>
  <%Figure.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%="checked" if @figure.titles.include?(title)%>><%=title.name%></input><br>
  <%end%>
  <br>
  <label for="new_title">Create a New Title</label>
  <input type="text" name="title[name]" id="new_title">
  <br>

  <label>Existing Landmarks</label><br>
  <%@figure.landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%="checked" if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input><br>
  <%end%>
  <br>
  <label for="new_landmark">Create a New Landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>

  <input type="submit" value="Edit Figure">
</form>
