<h2>Edit Historical Figure</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="figure_name">Edit the Figure's Name:</label>
    <br>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
    <br>

    <h3>Titles</h3>
    <% Title.all.each do |title| %>
      <label for="title_<%= title.id %>"><%= title.name %></label>
      <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.title_ids.include?(title.id) %>>
      <br>
    <% end %>

    <h3>Create New Landmark:</h3>
    <label for="new_landmark">Landmark Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]">

    <label for="new_landmark_year">Landmark Year:</label>
    <input type="text" id="new_landmark_year" name="landmark[year_completed]">
    <br><br>
    
    <input type="submit" value="Edit Figure" id="submit">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
