
<form action="/figures" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name"></input>

  <br><br>

  <label>Titles</label>
  <% Title.all.each do |title| %>
  <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= "#{title.id}" %>"><%= title.name %></p></input>
  <% end %>

  <br>

  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title"></input>

  <br><br>

  <label>Landmarks</label>
  <% Landmark.all.each do |landmark| %>
    <p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id  %>"><%= landmark.name %></input></p>
  <% end %>

  <br>

  <label>Create New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <input type="text" name="landmark[year]" id="new_landmark_year"></input>

  <br>
  <input type="submit" id="Create New Figure" value="Create New Figure">
</form>
