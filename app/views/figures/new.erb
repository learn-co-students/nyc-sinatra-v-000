<a class="button" href="/landmarks">Figures</a>
<a class="button" href="/">Home</a>
<h2>Create New Figure</h2>

<form action="/figures" method="POST">
  <p>
    <label for="figure_name">Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
  </p>
  <h3>Titles:</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
    <label for="title_#{title.id}"><%= title.name %></label> <br>
  <% end %>
  <p>
    <label for="new_title">Create New Title:</label>
    <input type="text" name="title[name]" id="new_title">
  </p>

  <p>
    <h3>Landmarks:</h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
      <label for="landmark_#{landmark.id}"><%= landmark.name %></label> <br>
    <% end %>
  </p>

  <p>
    <label for="new_landmark">Create New Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="landmarks_name">Year:</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year">
  </p>

  <input type="submit" value="Create New Figure">
</form>
