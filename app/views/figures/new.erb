<h2>Create New Figure</h2>

<!-- add content here -->
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>

<form action="/figures" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name"><br>

  <label>Select titles:</label><br>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input><br>
  <%end%>
  <label>and/or, create a new title:</label>
  <input  type="text" name="title[name]" id="new_title"></input><br><br>

  <label>Select landmarks:</label><br>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input><br>
  <%end%>
  <label>and/or, create a new landmark:</label>
  <input  type="text" name="landmark[name]" id = "new_landmark"></input><br>

  <input type="submit" value="Create New Figure">

</form>
