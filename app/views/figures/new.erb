<form action="/figures" method="post">

    <label> Name </label>
    <input type="text" name="figure[name]" id="figure_name"><br>

    <h3>Titles</h3>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>">
    <% end %><br>

    <h3>Create New Title:</h3>
    <input type="text" name="new_title" id="title[name]"><br>

    <h3>Landmarks</h3>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
    <% end %><br>

    <h3>Create New Landmark:</h3>
    <label> Name: </label>
    <input type="text" name="new_landmark" id="landmark[name]">
    <label> Year: </label>
    <input type="text" name="landmark[year_completed]"<br>

    <input type="submit" value="Create New Figure">
</form>