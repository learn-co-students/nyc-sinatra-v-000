<h2>Create New Figure</h2>

<!-- add content here id="title_<%=#{title.id}%>" id="landmark_<%=#{landmark.id}%>"-->
  <form action="/figures/new" action="POST">
    <label for="Figure Name">Name:</label>
    <input type="text" name="figure[name]" id="figure_name"></br>
    <h2><label for="Figure Title">Titles:</label></h2>
      <%@titles.each do |title| %>
        <p><input type="checkbox" name="figure[title_ids][]"  value=<%=title.name%>> <%= title.name%> </p>
      <%end%>
    <label for="Create Figure">Create New Title:</label>
    <input type="text" name="title[name]" id="new_title"></br>
    <h2><label for="Figure Landmark">Landmarks:</label></h2>
      <%@landmarks.each do |landmark| %>
        <p><input type="checkbox" name="figure[landmark_ids][]"  value=<%=landmark.name%>> <%= landmark.name%> </p>
      <%end%>
    <label for="Create Landmark">Create New Landmark:</label>
    <input type="text" name="landmark[name]" id="landmark_name"></br>
    <input type="submit" value="Create New Figure"></br>
  </form>

<a class="button" href="/figures">Figures</a>
