<h1> Create a new figure</h1>
<br></br>

<form action='/figures' method='POST'>
  <label>Name:</label>
  <br></br>
  <input type='text' name='figure[name]' id='figure_name'>
  <br></br>
  <label>Choose landmarks:</label>
  <br></br>
  <%@landmarks.each do |landmark|%>
    <input type='checkbox' name='figure[landmark_ids][]' id='landmark_<%=landmark.id%>' value='<%=landmark.id%>'><%=landmark.name%>
    <br></br>
    <%end%>
    <label>Create new landmark:</label><br></br>
    <label>Name:</label>
    <input type='text' name='landmark[name]' id='new_landmark'>

    <br></br>

    <label>Year Completed:</label>
    <input type='text' name='landmark[year_completed]' id='landmark_year_completed'>

    <br></br>
  <br></br>
  <label>Choose titles:</label>
  <br></br>
  <%@titles.each do |title|%>
    <input type='checkbox' name='figure[title_ids][]' id='title_<%=title.id%>' value='<%=title.id%>'><%=title.name%>
    <br></br>
    <%end%>
    <label>Create new title:</label>
    <input type='text' name='title[name]' id='new_title'>

    <br></br>
  <input type='submit' id='Create New Figure'>
</form>
