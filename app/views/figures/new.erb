<h1>Create a New Figure with the Form Below:</h1>

<form action="/figures" method="post">

  <h2>Figure Information:</h2>
  <label>Name:</label>
  <input type="text" id="figure_name" name="figure[name]">

  <h3><label>Select a Landmark:</label></h3>
  <br></br>
  <% Landmark.all.each do |landmark| %>
  <label><%= landmark.name %></label>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id>">
  <% end %>

  <br></br>

  <h3>or Create a New Landmark:</h3>
  <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark">
  <label>Year Completed:</label><input type="text" name="landmark[year_completed]">

  <h3><label for="titles">Select a Title:</label></h3>
  <% Titles.all.each do |title| %>
  <label><%= title.name %></label>
  <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>">
  <% end %>

  <h3>Create New Title:</h3>
  <label>Name:</label><input type="text" name="title[name]" id="new_title">

  <input type="submit" id="submit" value="Create New Figure">
</form>
