<form action="/figures" method="post">
  <p><input type="text" name="figure[name]" id="figure_name"></p>

  <% Title.all.each do |title| %>
    <label for="title_<%= title.id %>"><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]"value="<%= title.id %>">
  <% end %>

  <% Landmark.all.each do |landmark| %>
    <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]"value="<%= landmark.id %>">
  <% end %>

  <input type="checkbox">

  <p><input type="text" id="new_landmark" name="landmark[name]"></p>
  <p><input type="text" id="new_title" name="title[name]"></p>

  <p><input type="submit" name="submit" value="Create New Figure"></p>

</form>
