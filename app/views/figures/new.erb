<form method="POST" action="/figures">
  <p>
    <label for="figure_name">Name </label>
    <input type="text" id="figure_name" name="figure[name]">
  </p>
  <p>
    <h2>Titles</h2>
    <% Title.all.each do |title| %>
      <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %><br>
    <% end %>
  </p>
  <p>
    <h2>Create New Title:</h2>
    <input type="text" id="new_title" name="title[name]">
  </p>
  <p>
    <h2>Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
      <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>
  </p>
  <p>
    <h2>Create New Landmark:</h2>
    <label for="landmark_name">Name: </label><input type="text" id="new_landmark" name="landmark[name]">
    <label for="landmark_year">Year: </label><input type="text" id="year_completed" name="landmark[year_completed]">
  </p>
  <input type="submit" name="Create New Figure">
</form>
