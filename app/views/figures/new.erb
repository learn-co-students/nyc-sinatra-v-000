<h1>Create a New Figure</h1>
<form method="POST" action="/figures">
  <label for=figure_name>Name:</label>
  <input type="text" name="figure[name]" id="figure_name"><br><br>

  <label>Title(s):</label><br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %>
  <% end %><br>

  <label for=figure[landmark_ids][]>Landmark(s):</label><br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %>
  <% end %><br>

  <label for="landmark[name]">And/or New Associated Landmarks:>
  <input type="text" name="landmark[name]" id="new_landmark">
  </label><br><br>

  <label for="title[name]">And/or New Associated Titles><br>
    <input type="text" name="title[name]" id="new_title">
  </label>

  <input type="submit" id="submit" value="Create New Figure">
</form>
