<h1>New Figure</h1>
<form method="post" action="/figures">
    <label for="figure[name]">Name:</label>
    <input name="figure[name]" id="figure_name" type="text">
    
    <h2>Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
    <label for=""><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><br>
    <% end %>
    
    <h2>Titles</h2>
    <% Title.all.each do |title| %>
    <label for=""><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><br>
    <% end %>
    
    <h3>New Landmark</h3>
    <input type="text" id="new_landmark" name="landmark[name]">
    
    <h3>New Title</h3>
    <input type="text" id="new_title" name="title[name]">
    
    <input type="submit" value="Create New Figure">
</form>