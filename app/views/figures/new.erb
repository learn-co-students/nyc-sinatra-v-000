<h1>Create a new historical figure</h1>

<form action="/figures" method="POST">
  <label>Name: </label><input type="text" name="figure[name]" id="figure_name">
  <br></br>
  <h3>Titles</h3>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
    <br>
  <%end%>
  <h3><label>Create a new title:</label></h3>
  <input type="text" name="title[name]" id="new_title">
  <h3>Landmarks</h3>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
    <br>
  <%end%>
  <h3>Create a new landmark:</h3>
  <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark"> <label>Year: </label><input type="text" name="landmark[year]" id="landmark_year">
  <br></br>
  <input type="submit" value="Create New Figure">
  <br></br>
</form>
