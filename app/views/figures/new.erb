<h2>Create New Figure</h2>
<form action="/figures" method="POST">
    <label><strong>Name:</strong> </label>
    <input type="text" id="figure_name" name="figure[name]">
    <br>
    <label><strong> Title(s):</strong></label><br>
        <em>Choose an Existing Title </em><br>
        <%@titles.each do |title|%>
            <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"> 
        <%=title.name%>
        <br>
        <%end%>
    <br>
    <em> and/or Create a New Title: <em><br>
        <label>Title:</label> 
        <input type="text" name="title[name]" id="new_title">
        <br>
        <br>
    <label><strong>Landmarks: </strong></label>
        <em>Choose an Existing Landmark<em><br>
        <%@landmarks.each do |landmark|%>
            <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%= landmark.id %>">
        <%=landmark.name%>
        <%end%>
        <br>

    <em>and/or Create New Figure<em>
        <br>
        <label>Landmark: </label>
        <input type="text" name="landmark[name]" id="new_landmark">
        <br>
    
    <input type="submit" value="Create New Figure">
    </form>



<br>
