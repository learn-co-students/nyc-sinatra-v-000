<form action="/figures" method="post">
  <h4>Name: </h4>
  <input type="text" name="figure[name]" id="figure_name"><br>

  <h4>Titles: </h4>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.name %>"><%= title.name %><br>
  <% end %>

  <h4>Create New Title: </h4>
  <input type="text" name="title[name]" id="new_title">

  <h4>Figure Landmark: </h4>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value=" <%= landmark.name %>"><%= landmark.name %><br>
  <% end %>

  <h4>Create New Landmark: </h4>
  <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark">
  <label>Year: </label><input type="text" name="landmark[year_completed]" id="landmark_year">

  <br><br>

  <input type="submit" name="" value="Create New Figure">
</form>
