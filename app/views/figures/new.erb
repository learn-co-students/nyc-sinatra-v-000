<h1>Create a new Figure</h1>
<form action="/figures" method="post">
    <label for="name">Name </label>
    <input type="text" name="figure[name]" id="figure_name">
    <h2>Titles</h2>
    <%@titles.each do |title|%>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
        <label for="<%=title.name%>"><%=title.name%></label><br>
    <%end%>
        <label for="new_title">Create New Title:</label>
        <input type="text" name="title[name]" id="new_title">
    <h2>Landmarks</h2>
    <%@landmarks.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
        <label for="<%=landmark.name%>"><%=landmark.name%></label>
    <%end%>
    <h2>Create New Landmark</h2>
    <label for="landmark_name">Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="landmark_year">Year:</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year">
    <input type="submit" value="Create New Figure">
</form>