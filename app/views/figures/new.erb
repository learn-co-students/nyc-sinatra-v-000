<h2>Create New Figure</h2>

<!-- add content here -->
<form action="/figures" method="POST">
  <label for="figure_name">Name <input type="text" name="figure[name]" id="figure_name"></label>
<br></br>
<h2>Titles </h2>
<% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%=title.name%></input><br>
<% end %>
<br></br>
  <label for="new_title">Create New Title:</label>
  <input type="text" name="title[name]" id="new_title">
<br></br>
<h2>Landmarks</h2>
<% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%=landmark.name%></input><br>
<% end %>
<br></br>
<h2>Create New Landmark:</h2>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year: </label>
  <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">

</form>
<br></br>

<a class="button" href="/landmarks">Figures</a><br>
