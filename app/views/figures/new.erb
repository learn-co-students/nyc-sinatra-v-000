<h2>Create a New Historical Figure:</h2>

<form action="/figures" method="post">
    <p><label for "figure_name">Name:</label>
    <input type="text" name="figure[name]" id="figure_name"></p>

    <h5>Titles:</h5>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input><br>
    <% end %>

    <br>

    <h5>Create a New Title:</h5>
    <p><label for "title_name">Name:</label>
    <input type="text" name="title[name]" id="new_title"></p>

    <h5>Landmarks:</h5>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input><br>
    <% end %>

    <br>

    <h5>Create a New Landmark:</h5>
    <p><label for "landmark_name">Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark"></p>

    <br>

    <p><input type="submit" id="submit" value="Create New Figure"></p>
</form>
