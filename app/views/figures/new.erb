<h1>Create a New Figure</h1>
 <form action='/figures' method='post'>
  <label><h3>Name</h3></label>
  <input type='text' name='figure[name]' id='figure_name'><br>

  <label><h3>Titles</h3></label>
  <%Title.all.each do |title|%>
   <%= title.name%>
    <input type='checkbox' name='figure[title_ids][]' id="title_<%=title.id%>" value="<%=title.id%>">
  <%end%>
  <label><h3>Create a New Title:</h3></label>
  <input type='text' name='title[name]' id='new_title'><br>

  <label><h3>Landmark</h3></label>
  <%Landmark.all.each do |landmark|%>
  <%= landmark.name%>
    <input type='checkbox' name='figure[landmark_ids][]' id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
  <%end%>
  <label><h3>Create a New Landmark:</h3></label>
  Name: <input type='text' name='landmark[name]' id='new_landmark'>
  Year: <input type='integer' name='landmark[year_completed]' id='year_completed'>
  <br> <br>
  <input type='submit' value='Create New Figure' style="background-color: aqua; border-radius: 3px; font-size: 1em;">

</form>
