<form action="/figures" method="POST" accept-charset="utf-8">
  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name"/>

  <br><br>

  <% @titles.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" value="<%= title.id %>" name="figure[title_ids][]" id="title_<%= title.id %>"/>
  <% end %>

  <br><br>

  <label>New Title: </label>
  <input type="text" value="" name="title[name]" id="new_title"/>

  <br><br>

  <% @landmarks.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" value="<%= landmark.id %>" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>"/>
  <% end %>

  <br><br>

  <label>New Landmark: </label> <br>
  <label>Name:</label>
  <input type="text" value="" name="landmark[name]" id="new_landmark"/>
  <label>Year Completed:</label>
  <input type="text" value="" name="landmark[year_completed]" id="landmark_year_completed"/>

  <br><br>

  <input type="submit" value="Create New Figure" name="Create New Figure" id="Create New Figure"/>
  
</form>
