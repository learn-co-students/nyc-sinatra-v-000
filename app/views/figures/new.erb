<form action="/figures" method="POST" >
   <label>Name:</label>
   <input type="text" name="figure[name]" id="figure_name">
   
   <br>
   
     <label>Title:</label>
     <input type="text" name="title[name]" id="title_name">
     <%@titles.each do |title|%>
     <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>">
     <%end%>

   <br>
   
   <label>Landmark:</label>
   <input type="text" name="landmark[name]" id="landmark_name">
   <%@landmarks.each do |landmark|%>
   <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.id%>" value="<%=landmark.id%>">
   <%end%>
</form>

   
 