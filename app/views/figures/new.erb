<form action="/figures" method="POST">
<label for="figure_name">Figure Name:</label><br>
<input id="figure_name" type="text" name="figure[name]"><br><br>

<label for="title_id">Titles:</label><br>
<% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input>
<% end %><br><br>
<label for="title_id">Create New Title:</label><br>
<input id="new_title" type="text" name="title[name]"><br><br>

<label for="landmark_id">Landmarks:</label><br>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value=" <%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input>
<% end %><br><br>
<label>Create New Landmark:</label><br>
<label for="landmark_name">Name:</label><br>
<input id="new_landmark" type="text" name="landmark[name]"><br><br>
<label for="landmark_year">Year</label><br>
<input id="landmark_year" type="text" name="landmark[year]"><br><br>

<input type=submit value="Create New Figure">
</form>


