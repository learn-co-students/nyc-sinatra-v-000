<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label>Name:</label>
  <br></br>
  <input type="text" name="figure_name" id="figure[name]">

  <p>Choose a Title</p><br>

  <%@titles.each do |title|%>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%=title.name%></input>
  <%end%>
  <br></br>

  <p>Choose a Landmark</p><br>

  <%@landmarks.each do |landmark|%>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%=landmark.name%></input>
  <%end%>

  <br></br>
  <label>Create new Title:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">

  <br></br>
  <label>Create new Landmark:</label>
  <br></br>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <label>Year Completed (Landmark):</label>
  <br></br>
  <input type="text" name="landmark[year_completed]" id="new_landmark_year">
  
  <br></br>
  <input type="submit" value="Create New Figure">
</form>
