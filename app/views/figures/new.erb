<h2>Create New Figure</h2>
<form action="/figures" method="POST">
  <h3><label for="figure_name">Name:</label></h3>
  <input type="text" name="figure[name]" id="figure_name">

  <h3><label>Titles</label></h3>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input><br>
  <% end %>

  <h3><label>Create New Title:</label></h3>
  <input type="text" name="title[name]" id="new_title">

  <h3><label for="figure_landmarks">Landmarks</label></h3>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>

  <h3>Create New Landmark:</h3>
  <label for="new_landmark">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  
  <label for="landmark_year">Year:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year">

  <input type="submit" value="Create New Figure" id="Create New Figures">

</form>
