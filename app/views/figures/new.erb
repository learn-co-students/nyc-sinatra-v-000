<h1>Create A New Figure:</h1>
<form action="/figures" method="POST">

<label for="figure_name">Name:</label>
<input type="text" name="figure[name]" id="figure_name">

<h3>Current Titles:</h3>
<% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%>
  <% end %>

<h3>Add New Title:</h3>
<label for="new_title">New Title:</label>
<input type="text" name="title[name]" id="new_title">

<h3>Associated Landmarks:</h3>
<%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>%" id="landmark_<%=landmark.id%>">
    <%=landmark.name%>
<%end%>

<h3>Create New Landmark:</h3>
<label for="new_landmark">Landmark:</label>
<input type="text" name="landmark[name]" id="new_landmark">

<input type="submit" value="Create New Figure">
</form>