<h1>Add New Figure</h1>

<form action="/figures" method="POST">
  <label for="figure_name">Figure Name: </label>
  <input type="text" id="figure_name" name="figure[name]"></input><br>

  <h3>Titles</h3>
 
  <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"></input> <%= title.name %> <br>
  <% end %>

  <br></br>

  <h3>Create New Title:</h3>

  <input type="text" id="new_title" name="title[name]"></input><br>

  <h3>Landmarks</h3>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"></input> <%= landmark.name %> <br>
  <% end %>
  
  <br></br>

  <h3>Create New Landmark:</h3>

  <label for="new_landmark">Name: </label>
    <input type="text" id="new_landmark" name="landmark[name]"></input>
    <label for="new_landmark_year">Year:</label>
  <input type="text" id="new_landmark_year" name="landmark[year_completed]"></input>
  
  <br></br>

  <input type="submit" value="Create New Figure"></input>

</form>
