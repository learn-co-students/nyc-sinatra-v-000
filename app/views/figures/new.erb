<form action='/figures' method='POST'>
<label>Name:</label>
<input type="text" id="figure_name" name="figure[name]"></input><br>
<label>Titles:</label>
  <% Title.all.each do |title| %>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%=title.name%></input>
  <% end %><br>
<label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title"></input><br>
<label>Landmarks:</label>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%=landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%=landmark.name%></input>
  <% end %><br>
<label><h4>Create New Landmark:</h4></label>
<label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"></input><br>
<label>Year:</label>
  <input type="text" name="landmark[year_completed]">
<input type="submit" value="Create New Figure"></input> 
</form>