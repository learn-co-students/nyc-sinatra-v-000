<!-- the input's name field is how you're structuring the params hash -->

<form action="/figures" method="POST">
  Name<input type="text" name="figure[name]" id="figure_name" value="">
  <br>
  <br>
  <h2>Titles</h2>
  <br>
  <% Title.all.each do |title| %>
    <%= title.name %> <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
    <br>
  <% end %>
  <br>
  <h2>Create New Title: </h2>
  <input type="text" name="title[name]" id="new_title" value="">
  <br>
  <h2>Landmarks</h2>
  <br>
  <% Landmark.all.each do |landmark| %>
    <%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
    <br>
  <% end %>
  <br>
  <h2>Create New Landmark: </h2>
  Name: <input type="text" name="landmark[name]" id="new_landmark" value="">
  Year: <input type="number" name="landmark[year_completed]" value="">
  <input type="submit" value="Create New Figure">
</form>
