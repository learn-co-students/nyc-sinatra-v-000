<h2>Create New Figure</h2>

<form action="/figures" method="post">
  <label for="figure[name]">Name</label><br>
  <input type="text" name="figure[name]" id="figure_name"><br>
  
  <h3>Select a Title</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><label for="<%=title.name%>"><%=title.name%></label>
  <% end %>
  <h3>Or Create a New Title</h3>
  <label for="title[name]">Title Name:</label>
  <input type="text" name="title[name]" id="new_title">
  
  <br>
  
  <h3>Select a Landmark</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><label for="<%=landmark.name%>"><%=landmark.name%></label>
  <% end %>
  <h3>Or Create a New Landmark</h3>
  <label for="landmark[name]">Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>

  <input type="submit" value="Create Figure" id="Create New Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>