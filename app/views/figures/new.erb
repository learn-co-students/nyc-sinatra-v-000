<form action="/figures" method="POST">

  <h1>Figures</h1><br>

  <h2>Figure Information</h2><br>

  <label for="figure_name">Figure Name:</label><br>
  <input type="text" name="figure[name]" id="figure_name"><br>

  <label for="title_name">Title:</label><br>
    <% Title.all.each do |title| %>
    <input id="<%= title.name %>" type="checkbox" name="title[name]" value="<%= title.id %>"><%= title.name %>
  <% end %>

  <label for="landmark_name">Landmark:</label><br>
    <% Landmark.all.each do |landmark| %>
    <input id="<%= landmark.name %>" type="checkbox" name="landmark[name]" value="<%= landmark.id %>"><%= landmark.name %>
  <% end %>

  <input type="submit" value="Create New Figure"><br>

</form>
