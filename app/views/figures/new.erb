<h1>Create a New Figure</h1>

<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name"><br>

  <h4>Titles</h4>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
  <%end%>

  <h4>and/or Create a New Title</h4>
  <input type="text" name="title[name]" id="new_title"><br>

  <h4>Landmarks</h4>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>

  <h4>and/or Create a New Landmark</h4>
  <input type="text" name="landmark[name]"><br>

  <input type="submit" value="Create New Figure">

</form>
