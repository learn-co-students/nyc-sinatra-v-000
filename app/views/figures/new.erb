<h2>Create Figure</h2>

<form class="" action="/figures" method="post">
  <label for="">Figure Name:</label>
  <input type="text" name="figure[name]" value="" id="figure_name"><br>
<br>

<h2>Title</h2>
  <label for="">Select or enter new title.</label><br><br>

  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
  <% end %>
  <br>
  <label for="">New Title:</label>
  <input type="text" name="title[name]" value="" id="new_title">

  <h2>Landmark</h2>
  <label for="">Select or enter new landmark.</label><br><br>

    <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
    <% end %>
    <br>
    <label for="">New Landmark:</label>
    <input type="text" name="landmark[name]" value="" id="new_landmark">


  <br><br>
  <input type="submit" value="Create New Figure">
</form>
