<h1>Create A New Figure</h1>
<form action="/figures" method="post">
<label for="figure_name">Name</label>
<input type="text" name="figure[name]" id="figure_name">
<br>

<h4>Titles</h4>
<% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
<% end %>
<label for="new_title"><h4>Create New Title: </h4></label>
<input type="text" name="title[name]" id="new_title">

<label><h4>Landmarks</h4></label>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
<% end %>
<label for="new_landmark"><h4>Create New Landmark: </h4></label>
<label for="new_landmark">Name:</label>
<input type="text" name="landmark[name]" id="new_landmark">
<label for="landmark_year">Year Completed:</label>
<input type="text" name="landmark[year_completed" id="landmark_year">

<input type="submit" value="Create New Figure">
</form>