<h2>Create New Figure</h2>

<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" id="figure_name" name="figure[name]"><br>

  <h3>Titles</h3><br>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input><br>
  <%end%>
  <br>
  <h3>Create New Title:</h3><br>
  <input type="text" id="new_title" name="title[name]"><br>
  <br>

  <h3>Landmarks</h3><br>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input><br>
  <%end%>
  <br>
  <h3>Create New Landmark:</h3><br>
  <input type="text" id="new_landmark" name="landmark[name]"><br>
  <br>
  <button type="submit" value="Create New Figure">Create New Figure</button>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
