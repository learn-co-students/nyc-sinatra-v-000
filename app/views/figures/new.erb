<form method="POST" action="/figures">
    <label for="figure_name">Figure Name</label>
    <input type="text" name="figure[name]" id="figure_name">
    <br>

    <label>Figure Titles</label>
    <% Title.all.each do |title| %>
        <br><input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %>
    <% end %>
    <br>
    
    <label>Figure Lankmarks</label>
    <% Landmark.all.each do |landmark| %>
        <br><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %>
    <% end %>
    <br>
    
    <label for="title_name">New Title</label>
    <input type="text" name="title[name]" id="new_title">
    <br>
   
    <label for="landmark_name">New Landmark</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <br>

    <input type="submit" value="Create New Figure">
</form>
