<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  Name: <input type="text" name="figure[name]" id="figure_name"></br></br>

  <h4>Titles</h4>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></br>
  <% end %></br>

  Create New Title: <input type="text" name="title[name]" id="new_title"> </br></br>

  <h4>Landmarks</h4>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%></br>
  <% end %></br>

  Create New Landmark: </br>
  Name:<input type="text" name="landmark[name]" id="new_landmark">  
  Year Completed: <input type="text" name="landmark[year_completed]"></br></br>

  <input type="submit" id="Create New Figure" value = "Create New Figure">
</form>