<h1>Create New Figure</h1>

<form method="POST" action="/figures">

    <h2><label> Name </label><input type="text" name="figure[name]" id="figure_name"></h2>

    <h2><label> Titles </label></h2>
      <% Title.all.each do |title| %>

        <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"  id="title_<%= title.id %>">
          <label><%= title.name %></label></input></P>
      <% end %>

    <h2><label> Create New Title: </label><input type="text" name="title[name]" id="new_title"></h2>

    <h2><label> Landmarks </label></h2>
      <% Landmark.all.each do |landmark| %>
        <p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
        <label><%= landmark.name %></label</input></P>
      <% end %>

    <h2><label> Create New Landmark: </label><input type="text" name="landmark[name]" id="new_landmark"></h2>

    <input type="submit" value="Create New Figure">

</form>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
