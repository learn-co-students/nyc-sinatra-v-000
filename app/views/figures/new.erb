<form method="POST" action="/figures">
    Name <input type="text" id="figure_name" name="figure[name]"><br></br>
    
    <h3>Titles</h3><% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>

    <% end %>
 <h3>Create New Title:</h3><input type="text" id="new_title" name="title[name]">
  

  <h3>Landmarks</h3><% Landmark.all.each do |landmark| %>
      <%= landmark.name %>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>

    <% end %>
 <h3>Create New Landmark:</h3>
  Name <input type="text" id="new_landmark" name="landmark[name]">
  Year <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">
</form>