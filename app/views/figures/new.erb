<h1>Create a new historical figure</h1></br>
</br>
<form action="/figures" method="post">

<label for="figure_name">Figure Name: </label>
<input type="text" name="figure[name]" id="figure_name">
</br>

<h2>Title</h2></br>
<% Title.all.each do |title| %>
     <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %></br>
<% end %>

<h2> Create New Title: </h2>
<input type="text" name="title[name]" id="new_title">

<h2>Landmarks</h2>
<% Landmark.all.each do |landmark| %>
     <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %></br>
<% end %>

<h2>Create New Landmark </h2>
<label>Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
<label>Year: </label>
    <input type="text" name="landmark[year_completed]" id="Year">

<input type="submit" value="Create New Figure">
</form>
