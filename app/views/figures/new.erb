
<h1>Add a Figure </h1>

<form action="/figures" method="POST">
<label for="figure_name">Figure Name</label>
<input type="text" name="figure[name]" id="figure_name"> </br>

<label> Titles </label>
<% Title.all.each do |title| %>
  <label><%= title.name %></label><input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
<% end %>

<label> Landmarks </label>
<% Landmark.all.each do |landmark| %>
  <label><%= landmark.name %></label><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
<% end %>

<label for="new_landmark">Landmark Name</label>
<input type="text" name="landmark[name]" id="new_landmark"> </br>

<label for="landmark_year">Year</label>
<input type="text" name="landmark[year_completed]" id="landmark_year"> </br>

<label for="new_title">Title</label>
<input type="text" name="title[name]" id="new_title"> </br>


<input type="submit" value="Create New Figure">
</form>
