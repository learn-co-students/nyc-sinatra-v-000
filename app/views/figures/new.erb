<h2>Create New Figure</h2>

<form method="POST" action="/figures">
  <label for="figure[name]">Name </label><input id="figure[name]" type="text" name="figure[name]">
  <label for="figure[title_ids][]"><b>Titles</b></label><br>
  <% @titles.each do |title| %>
    <input id="figure[title_ids][]" type="checkbox" name="figure[title_ids][]" value="<%= @title.id %>"><%= @title.name %></input>
  <% end %><br>
  <label for="title[name]"><b>Create New Title:</b></label><br>
  <input id="landmark[name]" type="text" name="landmark[name]">
  <label for="figure[landmark_ids][]"><b>Landmarks</b></label><br>
  <% @landmarks.each do |landmark| %>
    <input id="figure[landmark_ids][]" type="checkbox" name="figure[landmark_ids][]" value="<%= @landmark.id %>"><%= @landmark.name %></input>
  <% end %><br>
  <label for="landmark[name]"><b>Create New Landmark:</b></label><br>
  <input id="landmark[name]" type="text" name="landmark[name]">
  <input type="submit" value="Create Figure">
</form>