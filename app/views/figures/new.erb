<h2>Create New Figure</h2>

<!-- add content here -->

<form action="/figures" method="POST">

  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <!--   <input type="text" name="artist[name]"> will also create a hash of {"Name =>"Testsong9"}-->
  <br><br>

  <label><strong>Title</strong></label><br>
  <%@titles.each do |title|%>
  <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><br>
  <% end %>

  <br></br>

  <label>Create new title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br><br>

  <label><strong>Landmarks</strong></label><br>
  <%@landmarks.each do |landmark|%>
  <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><br>
  <% end %>

  <br></br>

  <label>Create new Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  <br><br>

  <input type="submit" value="Create New Figure">

</form>
<br><br>
<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
