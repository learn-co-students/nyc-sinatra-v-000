<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" name="figure[name]" id="Figure Name">
  <br>

  <label>Titles</label><br>
  <br>
  <% Title.all.each do |title| %>
    <%= title.name %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.id %>"><br>
  <% end %>
  <br>

  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="Title Name"><br>
  <br>


  <input type="submit" value="Create New Figure">
</form>
