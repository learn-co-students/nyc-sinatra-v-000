<h1>Create a new figure</h1>

<form method="POST" action="/figures">
    <label for="figure[name]">Name</label>
    <input type="text" name="figure[name]" id="figure_name">

    <h3>Titles</h3>

    <%Title.all.each do |title|%>
        <input type="checkbox" id="title_<%=title.id%>" value="<%=title.id%>" name=
        "figure[title_ids][]"> <%=title.name%>
        <br>
    <%end%>

    <h3>Create New Title:</h3>
    <input type="text" name="title[name]" id="new_title">

    <h3>Landmarks</h3>

    <%Landmark.all.each do |landmark|%>
        <input type="checkbox" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" name="figure[landmark_ids][]"> <%=landmark.name%>
        <br>
    <%end%>

    <h3>Create New Landmark:</h3>
    <label for="landmark[name]">Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">

    <label for="landmark[year_completed]">Year:</label>
    <input type="text" name="landmark[year_completed]">

    <input type="submit" id="submit" value="Create New Figure">

</form>