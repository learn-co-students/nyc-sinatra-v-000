<h1>Create a new figure</h1>
<br>
<form action="/figures" method="post">

  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name">
  <br><br>

  <label>Titles</label><br>
  <%Title.all.each do |title| %>
    <li><label><%=title.name%></label>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"></input></li>
  <%end%><br>

  <label>Create New Title:</label><br>
  <input type="text" name="title[name]" id="new_title"></input><br>

  <label>Landmarks</label><br>
  <%Landmark.all.each do |landmark|%>
    <li><label><%=landmark.name%></label>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"></input></li>
  <% end %><br>

  <label>Create New Landmark:</label><br>
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <label>Year:</label>
  <input type="integer" name="landmark[year_completed]" id="landmark_year"></input>


  <input type="submit" value="Create New Figure">

</form>
