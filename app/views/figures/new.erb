<h1>Create a new figure!</h1>

<form action="/figures" method="POST">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <label>Titles</label>

  <br></br>

  <% Title.all.each do |title| %>
    <input type="checkbox"  name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input><br>
  <% end %>

  <br></br>

  <label>Create New Title:</label>

  <br></br>

  <input type="text" name="title[name]" id="new_title">

  <br></br>

  <label>Landmarks</label>

  <br></br>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>

  <br></br>

  <label>Create New Landmark:</label>

  <br></br>

  <label for="landmark_name">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark_year">Year:</label>
  <input type="text" name="landmark[year]" id="landmark_year">
  <input type="submit" value="Create New Figure">
</form>
