<h1>Create a New Figure</h1>

<form action="/figures" method="POST">
  <label>Name:</label>

  <br></br>

    <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <label>Titles</label><br>

  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
    <%end%>

  <br></br>

  <label>Create New Title:</label>

  <br></br>

  <label></label>
    <input type="text" id="new_title" name="title[name]"></input>

    <br></br>

  <label>Landmarks</label><br>
    <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input>
    <%end%>

    <br></br>

  <label>Create New Landmark:</label>

  <br></br>

  <label>Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]"></input>
  <label>Year:</label>
    <input type="text" name="landmark[year_completed]"></input>

    <br></br>

<input type="submit" value="Create New Figure">

</form>
