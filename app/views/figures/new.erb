<h1>Register a New Figure</h1>

<form method="POST" action="/figures">
  <label>Figure Name:</label><input type='text' name="figure[name]" id="figure_name"><br>
  <label><h3>Title</h3></label>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
  <% end %>
  <br>
  <lable><h3>Create A New Title:</h3></label>
    <input type="text" name="title[name]" id="new_title">
  <label><h3>Landmarks</h3></lable>
    <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%>
    <%end%>
  <br>
  <label><h3>Register a New Landmark</h3></label>
  <h4>Name:</h4>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <label><h4>Year Completed</h4></label>
  <input type="integer" name="landmark[year_completed]" id="year_completed"><br>

  <input type="submit" value="Create New Figure">

</form>
