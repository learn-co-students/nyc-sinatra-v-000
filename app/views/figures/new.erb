<h1>Create New Historical Figure</h1>

<form class="" action="/figures" method="post">

  <h3><label for="figure_name">Name: </label></h3>
  <input type="text" name="figure[name]" value="" id="figure_name">

  <h3><label>Titles</label></h3>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"> <%= title.name %> </input> <br>
  <% end %>

  <h3><label for="new_title">Create New Title:</label></h3>
  <input type="text" name="title[name]" value="" id="new_title">

  <h3><label>Landmarks</label></h3>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"> <%= landmark.name %> </input> <br>
  <% end %>

  <h3>Create New Landmark:</h3>

  <label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" value="" id="new_landmark">
  <label for="new_landmark_year">Year: </label>
  <input type="text" name="landmark[year_completed]" value="" id="new_landmark_year">

  <br><br>

  <input type="submit" value="Create New Figure">

</form>
