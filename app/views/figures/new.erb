<h1>Create a New Figure!</h1>

<form method='POST' action='/figures'>
  <h2>Name:</h2> <input type='text' name='figure[name]' id='figure_name'>

  <h3> Titles: </h3>
    <%Title.all.each do |title|%>
      <ul><input type='checkbox' name='figure[title_ids][]' value='<%=title.id%>' id='title_<%=title.id%>'><%=title.name%></ul>
    <%end%>

  <h4> Create a New Title:</h4>
  <input type='text' name='title[name]' id='new_title'>

  <h3> Landmarks: </h3>
    <%Landmark.all.each do |landmark|%>
      <ul><input type='checkbox' name='figure[landmark_ids][]' value='<%=landmark.id%>' id='landmark_<%=landmark.id%>'><%=landmark.name%></ul>
    <%end%>

  <h4> Create a New Landmark:</h4>
  Name:<input type='text' name='landmark[name]' id='new_landmark'>
  Year:<input type='text' name='landmark[year]' id='year_completed'>

  <p></p>

  <input type='submit' value='Create New Figure'>

</form>
