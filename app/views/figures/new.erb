<h2>Create A New Figure</h2>
  <form action="/figures" method="post">
    <label>Figure Name <input type="text" name="figure[name]" id="figure_name"></label>
    <br>

    <h3>Titles</h3>
    <% @titles.each do |e| %>
      <p><label><input type="checkbox" name="figure[title_ids][]" id="title_<%=e.id%>" value="<%=e.id%>"><%=e.name%></label></p>
    <% end %>

    <h3>Create New Title:</h3>
    <label>Name <input type="text" name="title[name]" id="new_title"></label>
    <br>

    <h3>Landmarks</h3>
    <% @landmarks.each do |e| %>
      <p><label><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=e.id%>" value="<%=e.id%>"><%=e.name%></label></p>
    <% end %>

    <h3>Create New Landmark:</h3>
    <label>Name <input type="text" name="landmark[name]" id="new_landmark"></label>
    <label>Year <input type="text" name="landmark[year]" id="year_completed"></label>
    <br>
    <br>
    <input type="submit" name="submit" value="Create New Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
