<h2> Add a new figure</h2>

<form action="/figures" method="POST">

<label>Name</label>
<input type="text" name="figure[name]" id="figure_name">
<br>
<br>

<h2>Titles</h2>
  <% Title.all.each do |title| %>
    <li><input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.name %>"><%=title.name%></input></li>
  <% end %>
<br>
<br>
<h2>Create New Title:</h2>
<input type="text" name="title[name]" id="new_title">
<br>
<br>
<br>

<h2>Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <li><input type="checkbox" id="landmark_<%= landmark.id %>"  name="figure[landmark_ids][]" value="<%= landmark.id %>"><%=landmark.name%></input></li>
  <% end %>
<br>
<br>
<h2>Create New Landmark:</h2>
<label>Name:</label>
<input type="text" name="landmark[name]" id="new_landmark">

<label>Year:</label>
<input type="text" name="landmark[year_completed]" >
<br>
<br>
<input type="submit" value="Create New Figure" >
</form>