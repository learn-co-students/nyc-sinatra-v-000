<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br>

  <label>Titles</label><br>
  <br>
  <% Title.all.each do |title| %>
    <%= title.name %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><br>
  <% end %>
  <br>

  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title"><br>
  <br>

  <label>Landmarks</label><br>
  <% Landmark.all.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><br>
  <% end %>
  <br>

  <label>Create New Landmark:</label>
  Name:
  <input type="text" name="landmark[name]" id="new_landmark">
  Year:
  <input type="text" name="landmark[year_completed]" id="new_landmark_year">

  <input type="submit" value="Create New Figure">
</form>
