<h1>Create a new Figure</h1>

<form action="/figures" method="POST">

  <label>Figure Name</label>

  <input type="text" name="figure[name]" id="figure_name" >
  <br></br>

  <label><h2> Titles </h2></label>
  <ul>
  <% Title.all.each do |title| %>
    <li><label><%= title.name %></label></li>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>" </input>
  <%end%>
  <br></br>

  <label> Create New Title: </label>
    <input type="text" name="title[name]" id ="new_title" value=""></br>
    <% #binding.pry %>
  <h2> Landmarks </h2>
  <ul>
    <% Landmark.all.each do |landmark| %>
    <li><label><%= landmark.name %></label></li>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>"value="<%= landmark.id %>">
    <%end%>
    <br></br>


  <label> Create New Landmark: </label>
    <input type="text" name="landmark[name]" id="new_landmark" ></br>



    <input type="submit" value="Create New Figure">




</form>
