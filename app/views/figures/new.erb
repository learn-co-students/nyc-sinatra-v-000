<form action='/figures' method='post'>
  <h1><label>Create a new Figure</label></h1>
  <h3><label>Name:</label></h3><input type="text" name="figure[name]" id="figure_name">
  <br></br>
  <label>Does your figure have one of the following titles?</label>
  <br></br>
    <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
    <%=title.name%>
    <%end%>
    <br></br>
  <h2><label>Or...create a new title for this figure</label></h2>
  <input type="text" name="title[name]" id="new_title">
  <br></br>
  <label>Does your figure have one of the following landmarks?</label>
  <br></br>
  <%Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
  <%=landmark.name%>
  <%end%>
  <br></br>
  <h2><label>Or...create a new landmark for this figure</label></h2>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <input type="submit" value="Create New Figure">
</form>
