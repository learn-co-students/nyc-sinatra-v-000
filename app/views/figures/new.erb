<h1>Create a new figure</h1>
<form method="POST" action="/figures">
  <label>Name: <input type="text" name="figure[name]" id="figure_name"/><br>

  <h3>Titles: </h3>
  <%Title.all.each do |title|%>
  <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"/><%=title.name%><br>
  <%end%><br>
  <h3>Create New Title</h3>
  <input type="text" name="title[name]" id="new_title"/><br>

  <h3>Landmarks: </h3>
  <%Landmark.all.each do |landmark|%>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"/><%=landmark.name%><br>
  <%end%>
  <h3>Create New Landmark</h3>
  <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark"/>
  <label> Year: </label><input type="text" name="landmark[year_completed]" id="year_completed"/><br>
  <input type="submit" value="Create New Figure" id="Create New Figure"/>
</form>
