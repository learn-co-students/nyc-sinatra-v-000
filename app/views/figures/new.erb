<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" id="figure_name" name="figure[name]">
  
  <br></br>
  <br></br>

  <label>Titles</label>

  <ul style="list-style: none;">
    <%@titles.each do |title|%>
      <li><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input></li>
    <%end%>
  </ul>

  <br></br>
 
  <label>and/or, create a new title:</label>
  <br></br>
    <input  type="text" id="new_title" name="title[name]"></input>
  <br></br>
  <br></br>

  <label>Landmarks</label>
 
  <br></br>

  <ul style="list-style: none;">
    <%@landmarks.each do |landmark|%>
      <li><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input></li>
    <%end%>
  </ul>

  <br></br>
 
  <label>and/or, create a new landmark:</label>
  <br></br>
  <label>Name:</label>
    <input  type="text" id="new_landmark" name="landmark[name]"></input>
    <label>Year:</label>
    <input  type="text" name="landmark[year]"></input>
  <br></br>
  
  <input type="submit" value="Create New Figure">

</form>