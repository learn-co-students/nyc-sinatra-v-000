<form action='/figures' method="POST">

  <label for=figure_name>Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <label for=figure[title_ids][]>Titles Associated</label><br>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%>
  <% end %>

  <label for=figure[landmark_ids][]>Landmarks Associated</label><br>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%>
  <% end %>

<br /><br />

  <label for="landmark[name]">And/or New Associated Landmarks><br>
  <input type="text" name="landmark[name]" id="new_landmark">
</label><br>

<label for="title[name]">And/or New Associated Titles><br>
<input type="text" name="title[name]" id="new_title">
</label><br>


  <input type="submit" id="submit" value="Create New Figure">
</form>
