<h1> Create a new Figure</h1>

  <form action="/figures" method="POST">

    <input type="text" name="figure[name]" id="figure_name" placeholder="Figure Name"><br>
  <hr>


  <h3>Select a title</h3>
  <% Title.all.each do |title| %>
  <label><%= title.name %></label>
  <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
  <% end %>


  <h3>Or Create a new Title</h3>
    <input type="text" name="title[name]"id="new_title" placeholder="Figure Title"><br>

<hr>
  <h3>Select a Landmark</h3>

  <br><% Landmark.all.each do |landmark| %>
  <label><%= landmark.name %></label>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
<% end %>

  <h3>Or Create a new Landmark</h3>
  <input type="text" name="landmark[name]" id="new_landmark" placeholder="Landmark Name"><br>


  <input type="submit" value="Create New Figure">
</form>
