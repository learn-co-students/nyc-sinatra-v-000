<h2>Create New Figure</h2>

<!-- add content here -->
  <form action="/figures" method="POST">

    <label for="Figure Name">Name:</label>
    <input type="text" name="figure[name]" id="figure_name"></br>
    <h2><label for="Figure Title">Titles:</label></h2>
      <%@titles.each do |title| %>
        <p><input type="checkbox" name="figure[title_ids][]"  id="title_<%=title.id%>" value=<%=title.id%>> <%= title.name%> </p>
      <%end%>
    <label for="Create Figure">Create New Title:</label>
    <input type="text" name="title[name]" id="new_title"></br>
    <h2><label for="Figure Landmark">Landmarks:</label></h2>
      <%@landmarks.each do |landmark| %>
        <p><input type="checkbox" name="figure[landmark_ids][]"  id="landmark_<%=landmark.id%>" value=<%=landmark.id%>> <%= landmark.name%> </p>
      <%end%>
    <label for="Create Landmark">Create New Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="Year Completed">Year Completed:</label>
    <input type="text" name="landmark[year_completed]" id="year_completed"></br>
    <input type="submit" value="Create New Figure"></br>
  </form>
<a class="button" href="/figures">Figures</a>
