<h1>Create a New Figure</h1>

<form action="/figures" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br>
  <label>Titles: </label>
  <p>Choose a title: </p><br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br></input>
  <% end %>
  <br>
  <label>and/or create New Title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br>

  <label>Landmarks: </label>
  <p>Choose a landmark: </p><br>
  <% @landmarks.each do |land| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= land.id %>" value="<%= land.id %>"><%= land.name %><br></input>
  <% end %>
  <br>

  <label>and/or create New Landmark:</label>
  <label>Name</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">

  <br>

  <input type="submit" value="Create New Figure">

</form>
