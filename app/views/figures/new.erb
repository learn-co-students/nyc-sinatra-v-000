<h2>Create New Figure</h2>
<form action="/figures/new" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" id="figure_name" name="figure[name]">

  <br></br>

  <h3>Titles</h3>
  <br></br>
  	<%@titles.each do |title|%>
    	<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
  	<%end%>
  <br></br>

  <h3>Create New Title</h3>
  <br></br>
  	<input type="text" id="new_title" name="title[name]">
  <br></br>

  <h3>Landmarks</h3>
  <br></br>
  	<%@landmarks.each do |landmark|%>
    	<input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
  	<%end%>
  <br></br>

  <h3>Create New Landmark:</h3>
  <br></br>
  	<label>Name:</label>
  <br></br>
  	<input type="text" id="new_landmark" name="landmark[name]">
  <br></br>
  	<label>Year Completed:</label>
  <br></br>
	<input type="text" id="landmark_year_completed" name="landmark[year_completed]">
  <br></br>
  
  <input type="submit" value="Create New Figure">
</form>