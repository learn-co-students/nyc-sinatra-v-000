<h1>Create a Figure</h1>

<form method="POST" action="/figures">
    <label for="figure name">Name:</label>
    <input type="text" id="figure_name" name="figure[name]"><br>

    <label for="titles"><h3>Titles:</h3></label>
    <% @titles.each do |title|%>
        <input type="checkbox" id=<%="title_#{title.id}"%> name="figure[title_ids][]" value=<%=title.id%>>
        <label for="<%=title.name%>"><%=title.name%></label><br>
    <% end %>

    <label for="create title"><h3>Create New Title:</h3></label>
    <input type="text" id="new_title" name="title[name]">

    <label for="landmarks"><h3>Landmarks:</h3></label>
    <% @landmarks.each do |landmark|%>
        <input type="checkbox" id=<%="landmark_#{landmark.id}"%> name="figure[landmark_ids][]" value=<%=landmark.id%>>
        <label for="<%=landmark.name%>"><%=landmark.name%></label><br>
    <% end %>

    <label for="create landmark"><h3>Create New Landmark:</h3></label>
    <input type="text" id="new_landmark" name="landmark[name]"><br><br>


    <input type="submit" value="Create New Figure">
</form>