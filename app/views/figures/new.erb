<h2>Create New Figure</h2>

<form action="/figures" method="POST">
  <h4><label for="figure_name">Name</label></h4>
  <input type="text" name="figure[name]" id="figure_name">
  <br>
  <br>
  <h4><label>Titles</label></h4>
  <%Title.all.each do |title|%>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%=title.name%></input>
    <br>
  <%end%>
  <br>
  <label>Create New Title:</label>
  <input  type="text" name="title[name]" id="new_title"></input>
  <br>
  <br>
  <h4><label>Landmarks</label></h4>
  <%Landmark.all.each do |landmark|%>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%=landmark.name%></input>
    <br>
  <%end%>
  <br>
  <label>Create New Landmark:</label>
  <br>
  <label>Name: </label><input  type="text" name="landmark[name]" id="new_landmark"></input>
  <label>Year: </label><input  type="text" name="landmark[year_completed]" id="landmark_year_completed"></input>
  <br>
  <br>
  <br>
  <input type="submit" value="Create New Figure">
</form>
<br>
<br>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
