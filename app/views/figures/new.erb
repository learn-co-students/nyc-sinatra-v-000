<h1>Add a New Figure</h1>

<form action="/figures" method="POST">
  <label> Figure Name </label>
  <input type="text" name="figure[name]" id= "figure_name"> </br>

  <label> Figure Title IDs </label>
  <input type="text" name="figure[title_ids][]" id= "figure title_ids"> </br>

  <label><h4>Titles</h4></label>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>

    <% end %>
 <label>Create New Title:</label><input type="text" id="new_title" name="title[name]"><br>

  <label><h4>Landmarks</h4></label>
    <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>

    <% end %>

    <label> Figure Landmark IDs </label>
    <input type="text" name="figure[landmark_ids][]" id= "figure landmark_ids"> </br>

    <label> Landmark Name </label>
    <input type="text" name="landmark[name]" id= "figure landmark_name"> </br>

    label><h4>Create New Landmark:</h4></label>
 <label>Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">
</form>
