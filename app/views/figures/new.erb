<h1>Create New Figure</h1>
<form action="/figures" method="POST">
<label>Name:</label>
<input type="text" name="figure[name]" id="figure_name">
<br>
<label>Titles:</label>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value= "<%=title.id%>"> <label><%=title.name%></label></input>
  <%end%>
<br>
<label>Create New Title:</label><br>
<label>Name:</label>
<input type="text" name="title[name]" id="new_title"></input>
<br>
<label>Figure Landmark(s):</label>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value= "<%=landmark.id%>"><label><%=landmark.name%></label> </input>
  <%end%>
<br>
<label>Create New Landmark:</label><br>
<label>Name:</label>
<input type="text" name="landmark[name]" id="new_landmark">
<label>Year:</label>
<input type="text" name="landmark[year_completed]" id="year_completed">
<br>
<input type="submit" value="Create New Figure">
</form>
