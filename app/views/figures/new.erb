<h1>Create a Figure</h1>
<form action="/figures" method="post">
  <label for="figure_name">Name </label>
  <input type="text" name="figure[name]" id="figure_name"></input>
  <h3>Titles</h3>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
  <% end %>
  <h3>Create New Title:</h3>
  <input type="text" id="new_title" name="title[name]">
  <br>
  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>
  <h3>Create New Landmark:</h3>
  <label>Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]">
  <input type="submit" id="Create New Figure" value="Create New Figure"></input>
</form>
