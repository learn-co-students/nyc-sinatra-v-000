<h1>New Figure</h1>
<form action="/figures" method="post">
	<label for="figure_name"><h4>Name:</h4>
		<input type="text" id="figure_name" name="figure[name]">
	</label>
	<br>
	<label for="figure[title_ids][]">
		<h4>Existing titles:</h4>
		<% @titles.each do |title| %>
			<input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%>
		<% end %>
	</label>
	<br>
	<h4>Or new title name:</h4>
	<label for="new_title">
		<input type="text" id="new_title" name="title[name]">
	</label>
	<br>
	<h4>Existing landmarks:</h4>
	<label for="landmark_ids">
		<% @landmarks.each do |landmark| %>
			<input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%>
		<% end %>
	</label>
	<h4>Or new landmark name:</h4>
	<label for="new_landmark">
		<input type="text" id="new_landmark" name="landmark[name]">
	</label>
	<br>
	<input type="submit" id="Create New Figure" value="Create New Figure">
</form>