<h1>Create a new figure</h1>

<form action="/figures" method="post">
  <p>Name: <input type="text" name="figure[name]" id="figure_name"></p>

  <h3>Titles</h3>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input><br>
  <%end%>
  <br/>

  <h3>Create a new title</h3>
  <input  type="text" name="title[name]" id="new_title"></input>

  <h3>Landmarks</h3>
  <%@landmarks.each do |lm|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=lm.id%>" value="<%=lm.id%>"><%=lm.name%></input><br>
  <%end%>

  <br/>


  <h3>Create a New Landmark:</h3><br>
  Name: <input  type="text" name="landmark[name]" id="new_landmark"></input>
  Year: <input  type="text" name="landmark[year_completed]" id="new_year"></input><br><br>

  <input type="submit" value="Create New Figure">
</form>
