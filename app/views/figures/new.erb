<h1>Create a New Figure</h1>

<form action="/figures" method="POST">

  <h2>Name</h2>
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <h2><label>Title(s)</label></h2>
  <%Title.all.each do |title|%>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
    <br></br>
  <%end%>

  <label>Create a New Title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br></br>

  <h2><label>Landmark(s)</label></h2>
  <%Landmark.all.each do |landmark|%>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
    <br></br>
  <%end%>

  <label>Create a new landmark:</label>
  <br></br>
  <label for="landmark_name">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark_year">Year:</label>
  <input type="text" name="landmark[year_completed]" id="new_landmark_year">

  <br></br>
  <input type="submit" value="Create New Figure">
</form>
