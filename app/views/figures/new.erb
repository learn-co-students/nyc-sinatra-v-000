<h1>Create a new Figure:</h1>

<form action="/figures/new" method="post">
  <p>Figure Name: <input type="text" name="figure[name]" id="figure_name"></p>

  <%if !Title.all.empty?%>
  <p>Please choose the appropriate Titles from the list below:</p>
  <%Title.all.each do |title|%>
  <p><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></p>
  <%end%>
  <%end%>
  <p>If needed, please enter new Title here: <input type="text" name="title[name]" id="new_title"></p>


  <%if !Landmark.all.empty?%>
  <p>Please choose the appropriate Landmarks from the list below:</p>
  <%Landmark.all.each do |land|%>
  <p><input type="checkbox" name="figure[landmark_ids][]" value="<%=land.id%>" id="landmark_<%=land.id%>"><%=land.name%></p>
  <%end%>
  <%end%>
  <p>If needed, please enter new Landmark here: <input type="text" name="landmark[name]" id="new_landmark"></p>

  <input type="submit" name="Submit" value="Create New Figure">
</form>
