<h1>Create a New Figure</h1>

<form action="/figures" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br>
  <label>Titles</label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>"><%= "title_#{title.id}" %><br></input>
  <% end %>
  <br>
  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br>
  
  <label>Landmarks</label>
  <% Landmark.all.each do |land| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= land.name %>" value="<%= land.id %>"><%= "landmark_#{land.id}" %><br></input>
  <% end %>
  <br>
  
  <label>Create New Landmark:</label>
  <label>Name</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  
  <br>
  
  <input type="submit" value="Create New Figure">

</form>