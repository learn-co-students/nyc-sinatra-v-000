<h1>Create a New Figure</h1>


<form action="/figures" method="post">
<!-- new figure name -->

  <h3>Name: <input type="text" name="figure[name]" id='figure_name'></h3>
  <br></br>

  <h3>Titles</h3>

  <!-- titles interation -->
  <% @titles.each do |title| %>
    <br><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id ="title_<%=title.id%>"><%= title.name %></input></br>
  <% end %>

  <!-- create a new title -->
  <h3>Create New Title:</h3>
  <p><input type="text" name="title[name]" id="new_title"></p>

  <h3>Landmarks</h3>

  <!-- landmark iteration -->

  <%@landmarks.each do |landmark| %>
    <br><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%=landmark.id%>"><%=landmark.name %></input></br>
  <% end %>

<!-- new landmark -->

<h3>Create New Landmark</h3>
Name: <input type="text" name="landmark[name]" id = "new_landmark">
Year: <input type="text" name="landmark[year_completed]" id ="year_completed">

<button type="submit" name="button">Create New Figure</button>
</form>
