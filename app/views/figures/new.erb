<form action="/figures" method="post">

  <label for="figure[name]">Name</label>
  <input type="text" name="figure_name" value="">

  <h2>Titles</h2>
  <%Title.all.each do |title|%>
    <label for="figure[title_ids][]"><%=title.name%></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><br>
  <%end%>

  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="new_title" value="">

  <h2>Landmarks</h2>
  <%Landmark.all.each do |landmark|%>
  <label for="figure[landmark_ids][]"><%=landmark.name%></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><br>
  <%end%>

  <h2>Create New Landmark</h2>
  <label for="landmark[name]">Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark" value="">
  <label for="landmark[year]">Year: </label>
  <input type="text" name="landmark[year]" value="">

  <input type="submit" name="" value="Create New Figure">

</form>
