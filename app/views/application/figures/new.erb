<h1>Create a new figure</h1>

<form method="post" action="/figures">
  <label for="figure_name">Name</label>
  <input type="text" id="figure_name" name="figure[name]">
  <br></br>

  <h2><label>Titles</label></h2>
  <% Title.all.each do |title|%>
    <%=title.name%><input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"><br>
  <%end%>
  <br></br>

  <h2><label for="new_title">Create New Title:</label></h2>
  <input type="text" id="new_title" name="title[name]">
  <br></br>

  <h2><label>Landmarks</label></h2>
  <% Landmark.all.each do |landmark|%>
    <%= landmark.name%><input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"><br>
  <%end%>
  <br></br>

  <h2><label>Create New Landmark:</label></h2>
  <label for="new_landmark">Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label for="year">Year:</label>
  <input type="text" id="year" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">
</form>
